@{
    ViewData["Title"] = "Create Module";
}

<div class="p-8 max-w-[600px] mx-auto">
    <div class="bg-white rounded-xl shadow-lg border border-gray-200 overflow-hidden">
        <div class="p-6 border-b border-gray-100 bg-gray-50">
             <h1 class="text-xl font-bold text-[#004B87]">Create New Module</h1>
        </div>
        
        <form asp-action="Create" class="p-8 space-y-6">
            <input type="hidden" name="CourseId" value="@ViewBag.CourseId" />
            
            <div>
                <label class="block text-sm font-bold text-slate-700 mb-2">Module Title</label>
                <input name="Title" class="w-full rounded-lg border-gray-300 shadow-sm focus:border-[#004B87] focus:ring-[#004B87]" placeholder="e.g. Unit 1: Introduction" required />
            </div>

            <div class="flex justify-end pt-6 border-t border-gray-100">
                <a asp-controller="Courses" asp-action="Details" asp-route-id="@ViewBag.CourseId" class="mr-4 px-6 py-2 text-slate-500 font-bold hover:text-slate-700">Cancel</a>
                <button type="submit" class="bg-[#004B87] text-white px-6 py-2 rounded-lg font-bold hover:bg-[#003d6e] shadow-lg shadow-blue-900/20">
                    Create Module
                </button>
            </div>
        </form>
    </div>
</div>
