@model IEnumerable<OzarkLMS.Models.Course>

<div class="p-8 lg:p-12 max-w-[1600px] mx-auto h-full flex flex-col">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-4xl font-extrabold text-[#2D3B45] dark:text-white mb-8 tracking-tight">All Courses</h1>
        @if(User.IsInRole("admin") || User.IsInRole("instructor"))
        {
            <a asp-action="Create" class="bg-[#2D3B45] text-white px-6 py-3 rounded-full flex items-center shadow-lg hover:bg-[#1f2930] transition-colors">
                <i data-lucide="plus" class="w-5 h-5 mr-2"></i> New Course
            </a>
        }
    </div>

    <div class="bg-white dark:bg-slate-800 rounded-3xl shadow-sm border border-slate-100 dark:border-slate-700 overflow-hidden flex-1 flex flex-col min-h-0">
        @if (!Model.Any())
        {
            <div class="p-20 text-center text-slate-400 flex flex-col items-center">
                <i data-lucide="book" class="w-12 h-12 mb-4 text-slate-300"></i>
                <p class="text-lg">No courses available.</p>
            </div>
        }
        else
        {
            <div class="overflow-y-auto flex-1 divide-y divide-slate-50 dark:divide-slate-700">
                @foreach (var course in Model)
                {
                    <div class="p-6 hover:bg-slate-50 dark:hover:bg-slate-750 transition-colors cursor-pointer flex items-center justify-between group">
                        <a asp-action="Details" asp-route-id="@course.Id" class="flex items-center space-x-6 flex-1">
                            <div class="w-14 h-14 rounded-2xl @course.Color flex items-center justify-center text-3xl text-white shadow-md">
                                @course.Icon
                            </div>
                            <div>
                                <h3 class="font-bold text-[#2D3B45] dark:text-white text-lg group-hover:text-[#BF2604] transition-colors">@course.Name</h3>
                                <p class="text-sm text-slate-500 dark:text-slate-400 font-medium">@course.Code â€¢ @course.Term</p>
                            </div>
                        </a>
                        <div class="flex items-center space-x-2">
                             @if(User.IsInRole("admin") || User.IsInRole("instructor"))
                             {
                                 <a asp-action="ManageStudents" asp-route-id="@course.Id" class="text-xs font-bold text-[#004B87] bg-blue-50 px-3 py-1.5 rounded-lg hover:bg-[#004B87] hover:text-white transition-colors z-10 relative">
                                     Manage Students
                                 </a>
                             }
                             <div class="text-slate-300 group-hover:text-slate-500 transition-colors">
                                <i data-lucide="chevron-right"></i>
                             </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>
