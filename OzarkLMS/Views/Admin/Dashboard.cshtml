@model OzarkLMS.ViewModels.AdminDashboardViewModel

<div class="p-8 max-w-[1400px] mx-auto">
    <h1 class="text-3xl font-bold text-[#004B87] dark:text-white mb-8">Admin Dashboard</h1>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-white dark:bg-slate-900 p-6 rounded-xl shadow-sm border border-gray-200 dark:border-slate-800">
            <h3 class="text-slate-500 dark:text-slate-400 font-medium text-sm">Total Students</h3>
            <p class="text-3xl font-bold text-slate-800 dark:text-white mt-2">@ViewBag.StudentCount</p>
        </div>
        <div class="bg-white dark:bg-slate-900 p-6 rounded-xl shadow-sm border border-gray-200 dark:border-slate-800">
            <h3 class="text-slate-500 dark:text-slate-400 font-medium text-sm">Instructors</h3>
            <p class="text-3xl font-bold text-slate-800 dark:text-white mt-2">@ViewBag.InstructorCount</p>
        </div>
        <div class="bg-white dark:bg-slate-900 p-6 rounded-xl shadow-sm border border-gray-200 dark:border-slate-800">
            <h3 class="text-slate-500 dark:text-slate-400 font-medium text-sm">Active Courses</h3>
            <p class="text-3xl font-bold text-slate-800 dark:text-white mt-2">@ViewBag.CourseCount</p>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="mb-8 flex space-x-4">
        <a asp-action="CreateUser" class="bg-[#004B87] dark:bg-blue-600 text-white px-4 py-2 rounded-lg font-medium text-sm flex items-center hover:bg-[#003d6e] dark:hover:bg-blue-700 transition-colors shadow-sm">
             <i data-lucide="user-plus" class="w-4 h-4 mr-2"></i> Add Student
        </a>
        <button onclick="document.getElementById('add-instructor-form').classList.toggle('hidden')" class="bg-white dark:bg-slate-800 border border-gray-200 dark:border-slate-700 text-slate-700 dark:text-slate-300 px-4 py-2 rounded-lg font-medium text-sm flex items-center hover:bg-gray-50 dark:hover:bg-slate-700 transition-colors shadow-sm">
             <i data-lucide="briefcase" class="w-4 h-4 mr-2"></i> Add Professor
        </button>
    </div>

    <!-- Admin Add Instructor Form -->
    <div id="add-instructor-form" class="hidden bg-blue-50 border border-blue-200 rounded-xl p-6 mb-8 shadow-inner max-w-2xl">
        <h3 class="text-sm font-bold text-blue-800 uppercase mb-4">Enroll New Professor</h3>
        <form asp-action="CreateInstructor" method="post" class="flex gap-4">
            <input type="text" name="username" placeholder="Username" class="flex-1 rounded-lg border-blue-200 text-sm focus:ring-[#004B87] focus:border-[#004B87] px-4 py-2" required />
            <input type="password" name="password" placeholder="Password" class="flex-1 rounded-lg border-blue-200 text-sm focus:ring-[#004B87] focus:border-[#004B87] px-4 py-2" required />
            <button type="submit" class="bg-[#004B87] text-white px-6 py-2 rounded-lg text-sm font-bold hover:bg-[#003d6e] shadow-md">Create</button>
        </form>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <!-- Faculty Directory -->
        <div class="bg-white dark:bg-slate-900 rounded-xl shadow-sm border border-gray-200 dark:border-slate-800 overflow-hidden">
             <div class="p-6 border-b border-gray-200 dark:border-slate-800">
                <h2 class="text-xl font-bold text-slate-800 dark:text-white">Faculty Directory</h2>
            </div>
            <table class="w-full text-left text-sm">
                <thead class="bg-gray-50 dark:bg-slate-950 text-slate-500 dark:text-slate-400 font-medium border-b border-gray-200 dark:border-slate-800">
                    <tr>
                        <th class="px-6 py-4">Name</th>
                        <th class="px-6 py-4">Role</th>
                        <th class="px-6 py-4">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100 dark:divide-slate-800">
                    @foreach (var instructor in Model.Instructors)
                    {
                    <tr class="hover:bg-gray-50 dark:hover:bg-slate-800 transition-colors">
                        <td class="px-6 py-4 font-medium text-slate-800 dark:text-slate-200 flex items-center">
                            <span class="w-8 h-8 rounded-full bg-blue-100 dark:bg-blue-900 text-[#004B87] dark:text-blue-300 flex items-center justify-center font-bold mr-3">
                                @instructor.Username.Substring(0,1).ToUpper()
                            </span>
                            @instructor.Username
                        </td>
                        <td class="px-6 py-4"><span class="bg-blue-50 dark:bg-blue-900/50 text-blue-700 dark:text-blue-300 px-2 py-1 rounded-full text-xs font-bold uppercase">Instructor</span></td>
                        <td class="px-6 py-4">
                            <button class="text-slate-400 hover:text-[#004B87] dark:hover:text-blue-400 transition-colors"><i data-lucide="edit-3" class="w-4 h-4"></i></button>
                            <button onclick="confirmDelete(@instructor.Id, '@instructor.Username')" class="text-slate-400 hover:text-red-600 dark:hover:text-red-400 transition-colors ml-2" title="Delete User">
                                <i data-lucide="trash-2" class="w-4 h-4"></i>
                            </button>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>

        <!-- Student Directory -->
        <div class="bg-white dark:bg-slate-900 rounded-xl shadow-sm border border-gray-200 dark:border-slate-800 overflow-hidden">
            <div class="p-6 border-b border-gray-200 dark:border-slate-800">
                <h2 class="text-xl font-bold text-slate-800 dark:text-white">Student Directory</h2>
            </div>
            <table class="w-full text-left text-sm">
                <thead class="bg-gray-50 dark:bg-slate-950 text-slate-500 dark:text-slate-400 font-medium border-b border-gray-200 dark:border-slate-800">
                    <tr>
                        <th class="px-6 py-4">Username</th>
                        <th class="px-6 py-4">Role</th>
                        <th class="px-6 py-4">Actions</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-100 dark:divide-slate-800">
                    @foreach (var student in Model.Students)
                    {
                    <tr class="hover:bg-gray-50 dark:hover:bg-slate-800 transition-colors">
                        <td class="px-6 py-4 font-medium text-slate-800 dark:text-slate-200">@student.Username</td>
                        <td class="px-6 py-4"><span class="bg-green-50 dark:bg-green-900/50 text-green-700 dark:text-green-300 px-2 py-1 rounded-full text-xs font-bold uppercase">@student.Role</span></td>
                        <td class="px-6 py-4">
                            <button class="text-slate-400 hover:text-[#004B87] dark:hover:text-blue-400 transition-colors"><i data-lucide="edit-3" class="w-4 h-4"></i></button>
                            <button onclick="confirmDelete(@student.Id, '@student.Username')" class="text-slate-400 hover:text-red-600 dark:hover:text-red-400 transition-colors ml-2" title="Delete User">
                                <i data-lucide="trash-2" class="w-4 h-4"></i>
                            </button>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div id="delete-modal" class="fixed inset-0 bg-gray-600 bg-opacity-50 overflow-y-auto h-full w-full hidden z-50 flex items-center justify-center">
    <div class="relative mx-auto p-5 border w-96 shadow-lg rounded-md bg-white">
        <div class="mt-3 text-center">
            <div class="mx-auto flex items-center justify-center h-12 w-12 rounded-full bg-red-100 mb-4">
                <i data-lucide="alert-triangle" class="h-6 w-6 text-red-600"></i>
            </div>
            <h3 class="text-lg leading-6 font-medium text-gray-900">Confirm Deletion</h3>
            <div class="mt-2 px-7 py-3">
                <p class="text-sm text-gray-500">
                    Are you sure you want to delete user <span id="delete-username" class="font-bold"></span>? 
                    This action cannot be undone.
                </p>
            </div>
            <div class="items-center px-4 py-3">
                <form id="delete-form" asp-action="DeleteUser" method="post">
                    <input type="hidden" name="id" id="delete-user-id" />
                    <button type="button" onclick="closeDeleteModal()" class="px-4 py-2 bg-gray-200 text-gray-800 text-base font-medium rounded-md w-24 mr-2 hover:bg-gray-300">
                        Cancel
                    </button>
                    <button type="submit" class="px-4 py-2 bg-red-600 text-white text-base font-medium rounded-md w-24 hover:bg-red-700 shadow-sm">
                        Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmDelete(id, username) {
        document.getElementById('delete-user-id').value = id;
        document.getElementById('delete-username').textContent = username;
        document.getElementById('delete-modal').classList.remove('hidden');
    }

    function closeDeleteModal() {
        document.getElementById('delete-modal').classList.add('hidden');
    }
</script>
