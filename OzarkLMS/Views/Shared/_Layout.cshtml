                        <!-- Header -->
                        <div class="px-4 py-3 border-b border-gray-100 dark:border-slate-800 flex items-center justify-between bg-gray-50/50 dark:bg-slate-950/50">
                            <h3 class="font-bold text-slate-800 dark:text-white text-sm">Notifications</h3>
                            <div class="flex items-center gap-2">
                                @if(hasUnread || _context.Notifications.Any(n => n.RecipientId == int.Parse(currentUserId ?? "0")))
