                    <i data-lucide="moon" class="w-5 h-5 hidden dark:block text-indigo-400"></i>
                    <i data-lucide="sun" class="w-5 h-5 block dark:hidden text-amber-500"></i>
                </button>
                
                <!-- Notification Dropdown -->
                <div class="relative" id="notification-container">
                    <button onclick="toggleNotificationDropdown()" class="w-9 h-9 flex items-center justify-center rounded-full hover:bg-gray-100 dark:hover:bg-slate-700 text-slate-500 dark:text-slate-400 relative transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-[#004B87] dark:focus:ring-slate-500">
                        <i data-lucide="bell" class="w-5 h-5"></i>
                        @if(hasUnread)
                        {
                            <span id="nav-unread-badge" class="absolute top-2 right-2 w-2 h-2 bg-[#DA291C] rounded-full border border-white dark:border-slate-800"></span>
                        }
                    </button>

                    <!-- Dropdown Panel -->
