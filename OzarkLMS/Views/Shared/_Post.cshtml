@model OzarkLMS.Models.Post
@{
    var currentUserId = 0;
    var userIdClaim = ViewContext.HttpContext.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier);
    if(userIdClaim != null && int.TryParse(userIdClaim.Value, out int uid)) {
        currentUserId = uid;
    }
}

<style>
    .post-card {
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(20px);
        -webkit-backdrop-filter: blur(20px);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .dark .post-card {
        background: rgba(30, 41, 59, 0.9);
    }
    .post-card:hover {
        transform: translateY(-2px);
        box-shadow: 0 12px 40px -10px rgba(0, 75, 135, 0.12);
    }
    .dark .post-card:hover {
        box-shadow: 0 12px 40px -10px rgba(59, 130, 246, 0.1);
    }
    
    .vote-btn {
        transition: all 0.15s ease;
    }
    .vote-btn:active {
        transform: scale(0.9);
    }
    
    .image-hover {
        transition: transform 0.3s ease;
    }
    .image-hover:hover {
        transform: scale(1.01);
    }
</style>

<div id="post-@Model.Id" class="post-card rounded-2xl shadow-sm border border-slate-200/50 dark:border-slate-700/50 overflow-hidden">
    <!-- Post Header -->
    <div class="p-5 pb-3 flex items-center justify-between">
        <div class="flex items-center">
            <a asp-controller="Account" asp-action="Profile" asp-route-userId="@Model.UserId" class="cursor-pointer group">
                @if(!string.IsNullOrEmpty(Model.User.ProfilePictureUrl))
                {
                    <img src="@Model.User.ProfilePictureUrl" class="w-11 h-11 rounded-xl object-cover mr-3 border-2 border-white dark:border-slate-700 shadow-md ring-2 ring-[#004B87]/10 group-hover:ring-[#004B87]/30 transition-all" />
                }
                else
                {
                    <div class="w-11 h-11 rounded-xl bg-[#004B87] flex items-center justify-center text-sm font-bold text-white mr-3 shadow-md group-hover:shadow-lg transition-all">
                        @(Model.User.Username.Substring(0,1).ToUpper())
                    </div>
                }
            </a>
            <div>
                <a asp-controller="Account" asp-action="Profile" asp-route-userId="@Model.UserId" class="font-semibold text-slate-800 dark:text-white hover:text-[#004B87] dark:hover:text-blue-400 transition-colors">@Model.User.Username</a>
                <p class="text-xs text-slate-500 dark:text-slate-400 flex items-center gap-1.5 mt-0.5">
                    <span class="px-2 py-0.5 rounded-full bg-slate-100 dark:bg-slate-700 text-[10px] font-medium">@Model.User.Role</span>
                    <span>â€¢</span>
                    <span>@Model.CreatedAt.ToLocalTime().ToString("MMM dd, HH:mm")</span>
                </p>
            </div>
        </div>
        
        <!-- Menu (Only for Author) -->
        @if(Model.UserId == currentUserId)
        {
            <div class="relative">
                <button onclick="togglePostMenu(@Model.Id)" class="text-slate-400 hover:text-slate-600 dark:hover:text-slate-300 p-2 rounded-xl hover:bg-slate-100 dark:hover:bg-slate-700 transition-all">
                    <i data-lucide="more-horizontal" class="w-5 h-5"></i>
                </button>
                <!-- Dropdown -->
                <div id="post-menu-@Model.Id" class="hidden absolute right-0 top-12 w-40 bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded-xl shadow-xl z-20 overflow-hidden animate-in fade-in slide-in-from-top-2 duration-150">
                    <button onclick="openEditPostModal(@Model.Id, `@System.Web.HttpUtility.JavaScriptStringEncode(Model.Content)`)" class="w-full text-left px-4 py-3 text-sm text-slate-700 dark:text-slate-200 hover:bg-slate-50 dark:hover:bg-slate-700 flex items-center transition-colors">
                        <i data-lucide="edit-2" class="w-4 h-4 mr-2 text-slate-400"></i> Edit
                    </button>
                    <button onclick="openDeletePostModal(@Model.Id)" class="w-full text-left px-4 py-3 text-sm text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20 flex items-center transition-colors border-t border-slate-100 dark:border-slate-700">
                        <i data-lucide="trash-2" class="w-4 h-4 mr-2"></i> Delete
                    </button>
                </div>
            </div>
        }
    </div>

    <!-- Post Content -->
    <div class="px-5 pb-3">
        @if(!string.IsNullOrEmpty(Model.Content))
        {
            <p class="text-slate-700 dark:text-slate-200 whitespace-pre-wrap leading-relaxed text-[15px]">@Model.Content</p>
        }
    </div>

    <!-- Attachments -->
    @if(!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <div class="mt-2 overflow-hidden">
            <img src="@Model.ImageUrl" class="w-full h-auto max-h-[600px] object-cover bg-slate-100 dark:bg-slate-900 image-hover cursor-pointer" onclick="openLightbox('@Model.ImageUrl')" />
        </div>
    }
    @if(!string.IsNullOrEmpty(Model.AttachmentUrl))
    {
        <div class="px-5 py-4">
            <a href="@Model.AttachmentUrl" target="_blank" class="flex items-center p-4 bg-slate-50 dark:bg-blue-900/10 border border-blue-200 dark:border-blue-800 rounded-xl group hover:bg-blue-50 dark:hover:bg-blue-900/20 transition-all shadow-sm">
                <div class="w-12 h-12 rounded-xl bg-blue-600 text-white flex items-center justify-center mr-4 shadow-md">
                    <i data-lucide="file-text" class="w-5 h-5"></i>
                </div>
                <div class="flex-1">
                    <p class="text-sm font-semibold text-blue-800 dark:text-blue-300 group-hover:underline">View Attachment</p>
                    <p class="text-xs text-blue-600 dark:text-blue-400">Click to open or download</p>
                </div>
                <i data-lucide="external-link" class="w-4 h-4 text-blue-400 dark:text-blue-500"></i>
            </a>
        </div>
    }

    <!-- Post Footer (Likes/Comments/Share) -->
    <div class="px-5 py-4 border-t border-slate-100 dark:border-slate-700/50 bg-slate-50/50 dark:bg-slate-800/50 flex items-center">
        @{
            var userVote = Model.Votes.FirstOrDefault(v => v.UserId == currentUserId)?.Value ?? 0;
            var score = Model.Votes.Sum(v => v.Value);
            var commentCount = Model.Comments.Count;
        }
        
        <!-- Upvote/Downvote Section -->
        <div class="flex items-center bg-slate-100 dark:bg-slate-700/50 rounded-xl p-1">
            <button onclick="vote(@Model.Id, 1, this)" class="vote-btn p-2 hover:bg-white dark:hover:bg-slate-600 rounded-lg transition-all group">
                <i data-lucide="arrow-big-up" class="w-5 h-5 transition-colors @(userVote == 1 ? "text-blue-600 fill-blue-600" : "text-slate-400 dark:text-slate-500 group-hover:text-blue-600")"></i>
            </button>
            
            <span class="font-bold text-sm min-w-[28px] text-center like-count px-1 @(userVote == 1 ? "text-blue-600" : (userVote == -1 ? "text-red-600" : "text-slate-700 dark:text-slate-300"))">@score</span>
            
            <button onclick="vote(@Model.Id, -1, this)" class="vote-btn p-2 hover:bg-white dark:hover:bg-slate-600 rounded-lg transition-all group">
                <i data-lucide="arrow-big-down" class="w-5 h-5 transition-colors @(userVote == -1 ? "text-red-600 fill-red-600" : "text-slate-400 dark:text-slate-500 group-hover:text-red-600")"></i>
            </button>
        </div>

        <button onclick="toggleComments(@Model.Id)" class="flex items-center text-slate-500 hover:text-[#004B87] dark:hover:text-blue-400 transition-colors space-x-2 text-sm font-medium ml-4 px-3 py-2 rounded-xl hover:bg-slate-100 dark:hover:bg-slate-700">
            <i data-lucide="message-circle" class="w-4 h-4"></i>
            <span><span class="comment-count">@commentCount</span> Comment@(commentCount != 1 ? "s" : "")</span>
        </button>
        
        <button onclick="sharePost(@Model.Id)" class="flex items-center text-slate-500 hover:text-emerald-600 dark:hover:text-emerald-400 transition-colors space-x-2 text-sm font-medium ml-auto px-3 py-2 rounded-xl hover:bg-slate-100 dark:hover:bg-slate-700">
            <i data-lucide="share-2" class="w-4 h-4"></i>
            <span>Share</span>
        </button>
    </div>

    <!-- Comment Section (Hidden by default) -->
    <div id="comments-@Model.Id" class="hidden border-t border-slate-100 dark:border-slate-700/50 bg-slate-50/80 dark:bg-slate-900/50">
        <div class="px-5 py-5 space-y-4">
            <div id="comment-list-@Model.Id" class="space-y-3">
                @foreach(var comment in Model.Comments.Where(c => c.ParentCommentId == null).OrderBy(c => c.CreatedAt))
                {
                    <partial name="~/Views/Collaboration/_PostComment.cshtml" model="comment" />
                }
            </div>
            
            <!-- Add Comment -->
            <div class="flex items-start space-x-3 pt-3 border-t border-slate-200/50 dark:border-slate-700/50">
                <div class="w-9 h-9 rounded-lg bg-slate-100 dark:bg-slate-800 flex items-center justify-center shadow-sm">
                    <i data-lucide="user" class="w-4 h-4 text-slate-500 dark:text-slate-400"></i>
                </div>
                <div class="flex-1 relative">
                    <input id="comment-input-@Model.Id" type="text" 
                        class="w-full bg-white dark:bg-slate-800 border border-slate-200 dark:border-slate-700 rounded-xl px-4 py-2.5 text-sm focus:ring-2 focus:ring-[#004B87] dark:focus:ring-blue-500 outline-none pr-12 transition-all shadow-sm" 
                        placeholder="Write a comment..." 
                        onkeydown="if(event.key === 'Enter') submitComment(@Model.Id)" />
                    <button onclick="submitComment(@Model.Id)" class="absolute right-2 top-1/2 -translate-y-1/2 text-[#004B87] dark:text-blue-400 hover:text-blue-700 dark:hover:text-blue-300 p-1.5 hover:bg-blue-50 dark:hover:bg-blue-900/20 rounded-lg transition-all">
                        <i data-lucide="send" class="w-4 h-4"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
