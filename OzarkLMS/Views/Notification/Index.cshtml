@model IEnumerable<OzarkLMS.Models.Notification>
@using System.Security.Claims

<div class="p-8 max-w-[1000px] mx-auto">
    <div class="flex items-center justify-between mb-8">
        <h1 class="text-3xl font-bold text-[#004B87]">Notifications</h1>
        @if(User.IsInRole("admin") || User.IsInRole("instructor"))
        {
            <a asp-action="Send" class="bg-[#DA291C] text-white px-4 py-2 rounded-lg font-bold hover:bg-[#b01e14] transition-colors shadow-sm flex items-center">
                <i data-lucide="send" class="w-4 h-4 mr-2"></i> Send Notification
            </a>
        }
    </div>

    @if(!Model.Any())
    {
        <div class="text-center py-20 bg-white rounded-xl shadow-sm border border-gray-200">
            <div class="w-16 h-16 bg-blue-50 rounded-full flex items-center justify-center mx-auto mb-4 text-[#004B87]">
                <i data-lucide="bell-off" class="w-8 h-8"></i>
            </div>
            <p class="text-slate-400 font-medium">You have no notifications.</p>
        </div>
    }
    else
    {
        <div class="space-y-4">
            @foreach(var note in Model)
            {
                <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-200 flex items-start group hover:border-blue-300 transition-colors @(note.IsRead ? "opacity-75" : "")">
                    <div class="mr-4 mt-1">
                        <div class="w-10 h-10 rounded-full bg-[#004B87] text-white flex items-center justify-center font-bold text-sm">
                            @(note.Sender?.Username.Substring(0, 1).ToUpper() ?? "S")
                        </div>
                    </div>
                    <div class="flex-1">
                        <div class="flex justify-between items-start">
                             <h3 class="font-bold text-slate-800 text-lg">@note.Title</h3>
                             <span class="text-xs text-slate-400">@note.SentDate.ToShortDateString()</span>
                        </div>
                        <p class="text-slate-600 mt-1 leading-relaxed">@note.Message</p>
                        <div class="mt-2 text-xs text-slate-400 font-medium">
                            From: <span class="text-[#004B87]">@(note.Sender?.Username ?? "System")</span>
                        </div>
                    </div>
                    @if(!note.IsRead)
                    {
                         <div class="ml-4 flex-shrink-0">
                             <span class="w-3 h-3 bg-[#DA291C] rounded-full block" title="Unread"></span>
                         </div>
                    }
                </div>
            }
        </div>
    }
</div>
