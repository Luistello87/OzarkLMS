@model IEnumerable<OzarkLMS.Models.Notification>
@using System.Security.Claims

<div class="p-8 max-w-[1000px] mx-auto min-h-screen">
    <div class="flex items-center justify-between mb-8">
        <h1 class="text-3xl font-bold text-[#004B87] dark:text-white">Notifications</h1>
        <div class="flex items-center gap-3">
             @if(Model.Any())
             {
                 <div id="clear-all-wrapper" class="relative">
                     <!-- Initial Button -->
                     <button id="btn-clear-all" onclick="toggleClearConfirm(true)" class="text-slate-500 dark:text-slate-400 hover:text-white hover:bg-black dark:hover:bg-white dark:hover:text-black px-4 py-2 rounded-lg transition-all text-sm font-bold">
                         Clear All
                     </button>
                     
                     <!-- Confirmation State -->
                     <div id="msg-clear-confirm" class="hidden absolute right-0 top-0 flex items-center bg-red-100 dark:bg-red-900 border border-red-200 dark:border-red-800 rounded-lg overflow-hidden shadow-lg h-full">
                         <span class="text-xs font-bold text-red-600 dark:text-red-200 px-3 whitespace-nowrap">Clear All?</span>
                         <button onclick="clearAllNotifications()" class="h-full px-3 text-red-600 dark:text-red-200 hover:bg-red-200 dark:hover:bg-red-800 transition-colors flex items-center">
                             <i data-lucide="check" class="w-4 h-4"></i>
                         </button>
                         <div class="w-[1px] h-4 bg-red-200 dark:bg-red-800"></div>
                         <button onclick="toggleClearConfirm(false)" class="h-full px-3 text-red-600 dark:text-red-200 hover:bg-red-200 dark:hover:bg-red-800 transition-colors flex items-center">
                             <i data-lucide="x" class="w-4 h-4"></i>
                         </button>
                     </div>
                 </div>
             }
             @if(User.IsInRole("admin") || User.IsInRole("instructor"))
             {
                 <a asp-action="Send" class="bg-[#DA291C] text-white px-4 py-2 rounded-lg font-bold hover:bg-[#b01e14] transition-colors shadow-sm flex items-center text-sm">
                     <i data-lucide="send" class="w-4 h-4 mr-2"></i> Send Notification
                 </a>
             }
        </div>
    </div>

    @if(!Model.Any())
    {
        <div class="text-center py-20 bg-white dark:bg-slate-900 rounded-xl shadow-sm border border-gray-200 dark:border-slate-800">
            <div class="w-16 h-16 bg-blue-50 dark:bg-slate-800 rounded-full flex items-center justify-center mx-auto mb-4 text-[#004B87] dark:text-blue-400">
                <i data-lucide="bell-off" class="w-8 h-8"></i>
            </div>
            <p class="text-slate-400 font-medium">You have no notifications.</p>
        </div>
    }
    else
    {
        <div class="space-y-4" id="notification-list">
            @foreach(var note in Model)
            {
                <div id="note-@note.Id" 
                     onclick="handleNotificationClick(@note.Id, '@(string.IsNullOrEmpty(note.ActionUrl) ? "" : note.ActionUrl)')"
                     class="bg-white dark:bg-slate-900 p-6 rounded-xl shadow-sm border border-gray-200 dark:border-slate-800 flex items-start group hover:border-blue-300 dark:hover:border-blue-700 transition-all cursor-pointer relative @(note.IsRead ? "opacity-75" : "bg-blue-50/10 dark:bg-blue-900/10")">
                    
                    <!-- Avatar -->
                    <div class="mr-4 mt-1">
                        <div class="w-10 h-10 rounded-full bg-[#004B87] dark:bg-blue-600 text-white flex items-center justify-center font-bold text-sm shadow-sm ring-2 ring-white dark:ring-slate-800">
                            @(note.Sender?.Username.Substring(0, 1).ToUpper() ?? "S")
                        </div>
                    </div>
                    
                    <!-- Content -->
                    <div class="flex-1 pr-8">
                        <div class="flex justify-between items-start">
                             <h3 class="font-bold text-slate-800 dark:text-white text-lg">@note.Title</h3>
                             <span class="text-xs text-slate-400 dark:text-slate-500 whitespace-nowrap ml-4">@note.SentDate.ToLocalTime().ToShortDateString()</span>
                        </div>
                        <p class="text-slate-600 dark:text-slate-300 mt-1 leading-relaxed text-sm">@note.Message</p>
                        <div class="mt-2 text-xs text-slate-400 dark:text-slate-500 font-medium">
                            From: <span class="text-[#004B87] dark:text-blue-400">@(note.Sender?.Username ?? "System")</span>
                        </div>
                    </div>

                    <!-- Unread Indicator (Red Dot) -->
                    @if(!note.IsRead)
                    {
                         <div class="absolute top-6 right-6" id="dot-@note.Id">
                             <span class="w-2.5 h-2.5 bg-[#DA291C] rounded-full block shadow-sm ring-2 ring-white dark:ring-slate-900" title="Unread"></span>
                         </div>
                    }

                    <!-- Delete Action Wrapper -->
                    <div class="absolute bottom-4 right-4 flex items-center justify-end" onclick="event.stopPropagation()">
                        <!-- Initial Trash Icon -->
                        <button id="del-btn-@note.Id" onclick="toggleNoteDelete(event, @note.Id, true)" class="text-slate-300 hover:text-red-500 dark:text-slate-600 dark:hover:text-red-400 transition-colors p-2 rounded-full hover:bg-red-50 dark:hover:bg-red-900/20 opacity-0 group-hover:opacity-100" title="Delete">
                            <i data-lucide="trash-2" class="w-4 h-4"></i>
                        </button>
                        
                        <!-- Confirmation Actions -->
                        <div id="del-confirm-@note.Id" class="hidden flex items-center bg-red-50 dark:bg-slate-800 border border-red-200 dark:border-red-900/50 rounded-full shadow-md">
                            <button onclick="deleteNotification(event, @note.Id)" class="p-2 text-red-600 dark:text-red-400 hover:bg-red-100 dark:hover:bg-red-900/30 rounded-full transition-colors" title="Confirm">
                                <i data-lucide="check" class="w-4 h-4"></i>
                            </button>
                            <button onclick="toggleNoteDelete(event, @note.Id, false)" class="p-2 text-slate-400 hover:text-slate-600 dark:hover:text-slate-300 rounded-full transition-colors" title="Cancel">
                                <i data-lucide="x" class="w-4 h-4"></i>
                            </button>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        // --- Clear All Logic ---
        function toggleClearConfirm(show) {
            const btn = document.getElementById('btn-clear-all');
            const confirm = document.getElementById('msg-clear-confirm');
            
            if(show) {
                btn.classList.add('invisible');
                confirm.classList.remove('hidden');
            } else {
                btn.classList.remove('invisible');
                confirm.classList.add('hidden');
            }
        }

        async function clearAllNotifications() {
             try {
                const res = await fetch(`/Notification/ClearAll`, { method: 'POST' });
                if(res.ok) {
                    location.reload();
                }
            } catch(e) { console.error(e); }
        }

        // --- Single Notification Logic ---
        function toggleNoteDelete(e, id, show) {
            e.stopPropagation();
            const btn = document.getElementById(`del-btn-${id}`);
            const confirm = document.getElementById(`del-confirm-${id}`);
            
            if(show) {
                btn.classList.add('hidden');
                confirm.classList.remove('hidden');
            } else {
                btn.classList.remove('hidden');
                confirm.classList.add('hidden');
            }
        }

        async function deleteNotification(e, id) {
            e.stopPropagation();
            try {
                const res = await fetch(`/Notification/Delete/${id}`, { method: 'POST' });
                if(res.ok) {
                    const el = document.getElementById(`note-${id}`);
                    el.style.opacity = '0';
                    setTimeout(() => el.remove(), 300);
                    
                    // Check if list empty
                    const list = document.getElementById('notification-list');
                    if(list && list.children.length <= 1) location.reload(); 
                }
            } catch(e) { console.error(e); }
        }

        async function handleNotificationClick(id, url) {
            // Check if user clicked confirmation buttons, handled by stopPropagation but just in case
            
            // Mark as read first
            try {
                await fetch(`/Notification/MarkRead/${id}`, { method: 'POST' });
            } catch(e) { console.error(e); }

            // Navigate
            if (url && url !== "") {
                window.location.href = url;
            } else {
                location.reload();
            }
        }
    </script>
}
