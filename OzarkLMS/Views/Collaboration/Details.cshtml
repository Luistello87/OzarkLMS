@model OzarkLMS.Models.ChatGroup
@using System.Security.Claims

@{
    var currentUserId = int.Parse(User.FindFirstValue("UserId") ?? User.FindFirstValue(ClaimTypes.NameIdentifier) ?? "0");
    var isAdmin = User.IsInRole("admin");
    var isOwner = Model.OwnerId == currentUserId;
    var isDefault = Model.IsDefault;
    var canManage = isDefault ? isAdmin : (isOwner || isAdmin);
    var isMember = Model.Members.Any(m => m.UserId == currentUserId);
    
    // Get persistence view preference (default to List)
    var myMembership = Model.Members.FirstOrDefault(m => m.UserId == currentUserId);
    var viewMode = myMembership?.ViewMode ?? "List";
}

<div class="flex h-[calc(100vh-64px)] bg-[#F0F2F5] dark:bg-slate-900 overflow-hidden">
    <!-- Chat Area -->
    <div class="flex-1 flex flex-col relative w-full">
        
        <!-- Header -->
        <div class="px-6 py-3 bg-white dark:bg-slate-800 border-b border-gray-200 dark:border-slate-700 flex items-center justify-between shadow-sm z-20">
             <div class="flex items-center">
                 <a asp-action="Index" class="mr-3 p-2 hover:bg-gray-100 dark:hover:bg-slate-700 rounded-full text-slate-500 dark:text-slate-400 transition-colors">
                    <i data-lucide="arrow-left" class="w-5 h-5"></i>
                </a>
                
                <!-- Group Photo -->
                <div class="w-10 h-10 rounded-full mr-3 overflow-hidden bg-gray-100 dark:bg-slate-700 border border-gray-200 dark:border-slate-600 flex items-center justify-center relative group">
                     @if(!string.IsNullOrEmpty(Model.GroupPhotoUrl))
                     {
                         <img src="@Model.GroupPhotoUrl" class="w-full h-full object-cover" />
                     }
                     else
                     {
                          <i data-lucide="@(isDefault ? "building" : "users")" class="w-5 h-5 text-slate-400 dark:text-slate-500"></i>
                     }
                     
                     @if(canManage)
                     {
                         <button onclick="document.getElementById('uploadPhotoInput').click()" class="absolute inset-0 bg-black/40 hidden group-hover:flex items-center justify-center text-white cursor-pointer">
                             <i data-lucide="camera" class="w-4 h-4"></i>
                         </button>
                         <form asp-action="UpdateGroupPhoto" method="post" enctype="multipart/form-data" class="hidden">
                             <input type="hidden" name="groupId" value="@Model.Id" />
                             <input type="file" name="photo" id="uploadPhotoInput" onchange="this.form.submit()" accept="image/*" />
                         </form>
                     }
                </div>
                
                <div>
                    <h1 class="font-bold text-lg text-slate-800 dark:text-slate-100 leading-tight flex items-center">
                        @Model.Name
                        @if(Model.IsDefault)
                        {
                             <span class="ml-2 bg-blue-100 dark:bg-blue-900 text-blue-700 dark:text-blue-300 text-[10px] font-bold px-2 py-0.5 rounded-full uppercase">Official</span>
                        }
                    </h1>
                    <p class="text-xs text-slate-500 dark:text-slate-400 cursor-pointer hover:text-blue-600 dark:hover:text-blue-400 truncate max-w-[200px]" onclick="document.getElementById('membersModal').classList.remove('hidden')">
                        @Model.Members.Count members &bull; @Model.Description
                    </p>
                </div>
             </div>
             
             <div class="flex items-center space-x-2">
                 <!-- View Toggle -->
                 <form asp-action="ToggleViewMode" method="post" class="flex bg-gray-100 dark:bg-slate-700 p-1 rounded-lg">
                     <input type="hidden" name="groupId" value="@Model.Id" />
                     <button type="submit" name="viewMode" value="List" class="p-1.5 rounded-md @(viewMode == "List" ? "bg-white dark:bg-slate-600 shadow-sm text-blue-600 dark:text-blue-400" : "text-slate-500 dark:text-slate-400 hover:text-slate-700 dark:hover:text-slate-200") transition-all">
                         <i data-lucide="list" class="w-4 h-4"></i>
                     </button>
                     <button type="submit" name="viewMode" value="Grid" class="p-1.5 rounded-md @(viewMode == "Grid" ? "bg-white dark:bg-slate-600 shadow-sm text-blue-600 dark:text-blue-400" : "text-slate-500 dark:text-slate-400 hover:text-slate-700 dark:hover:text-slate-200") transition-all">
                         <i data-lucide="grid-2x2" class="w-4 h-4"></i>
                     </button>
                 </form>
                 
                 <button class="p-2 text-slate-400 dark:text-slate-500 hover:text-slate-600 dark:hover:text-slate-300 hover:bg-gray-100 dark:hover:bg-slate-700 rounded-full" onclick="document.getElementById('membersModal').classList.remove('hidden')">
                     <i data-lucide="info" class="w-5 h-5"></i>
                 </button>
                 
                 @if(canManage || (!isDefault && isMember))
                {
                    <div class="relative">
                        <button onclick="toggleMenu()" class="p-2 hover:bg-gray-100 dark:hover:bg-slate-700 rounded-full text-slate-500 dark:text-slate-400">
                            <i data-lucide="more-vertical" class="w-5 h-5"></i>
                        </button>
                        <!-- Persistent Menu -->
                        <div id="optionsMenu" class="absolute right-0 top-full mt-2 w-56 bg-white dark:bg-slate-800 rounded-xl shadow-xl border border-gray-100 dark:border-slate-700 py-1 hidden z-50">
                            <div class="flex justify-between items-center px-4 py-2 border-b border-gray-100 dark:border-slate-700">
                                <span class="text-xs font-bold text-slate-400 dark:text-slate-500 uppercase tracking-wider">Options</span>
                                <button onclick="toggleMenu()" class="text-slate-400 hover:text-slate-600 dark:text-slate-500 dark:hover:text-slate-300">
                                    <i data-lucide="x" class="w-4 h-4"></i>
                                </button>
                            </div>
                            
                            @if(canManage)
                            {
                                <button onclick="document.getElementById('membersModal').classList.remove('hidden'); toggleMenu();" class="block w-full text-left px-4 py-2.5 text-sm text-slate-700 dark:text-slate-300 hover:bg-gray-50 dark:hover:bg-slate-700">Manage Members</button>
                                <form asp-action="DeleteGroup" method="post" onsubmit="return confirm('Are you sure you want to delete this group?');">
                                    <input type="hidden" name="groupId" value="@Model.Id" />
                                    <button type="submit" class="block w-full text-left px-4 py-2.5 text-sm text-red-600 dark:text-red-400 hover:bg-red-50 dark:hover:bg-red-900/20 font-bold">Delete Group</button>
                                </form>
                            }
                            
                            @if(!isDefault && isMember)
                            {
                                 <form asp-action="LeaveGroup" method="post" onsubmit="return confirm('Are you sure you want to leave this group?');">
                                    <input type="hidden" name="groupId" value="@Model.Id" />
                                    <button type="submit" class="block w-full text-left px-4 py-2.5 text-sm text-slate-700 dark:text-slate-300 hover:bg-gray-50 dark:hover:bg-slate-700 border-t border-gray-100 dark:border-slate-700">Leave Group</button>
                                </form>
                            }
                        </div>
                    </div>
                }
             </div>
        </div>

        <!-- Chat Content -->
        @if(viewMode == "Grid")
        {
            <!-- GRID VIEW (Media Focused) -->
            <div class="flex-1 overflow-y-auto p-6 bg-slate-50 dark:bg-slate-900/50">
                 <h3 class="font-bold text-slate-400 dark:text-slate-600 text-xs uppercase mb-4 tracking-wider">Media Gallery</h3>
                 <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-4">
                     @foreach(var msg in Model.Messages.OrderByDescending(m => m.SentDate).Where(m => !string.IsNullOrEmpty(m.AttachmentUrl)))
                     {
                         bool isImg = msg.AttachmentContentType?.StartsWith("image/") ?? (msg.AttachmentUrl != null && (msg.AttachmentUrl.EndsWith(".jpg") || msg.AttachmentUrl.EndsWith(".png") || msg.AttachmentUrl.EndsWith(".gif")));
                         <div class="aspect-square bg-white dark:bg-slate-800 rounded-xl shadow-sm border border-gray-200 dark:border-slate-700 overflow-hidden relative group cursor-pointer hover:shadow-md transition-all">
                             @if(isImg)
                             {
                                 <img src="@msg.AttachmentUrl" class="w-full h-full object-cover" onclick="openLightbox('@msg.AttachmentUrl')" />
                             }
                             else
                             {
                                 <a href="@msg.AttachmentUrl" target="_blank" class="flex flex-col items-center justify-center h-full w-full bg-gray-50 dark:bg-slate-700/50 text-slate-500 dark:text-slate-400 hover:bg-gray-100 dark:hover:bg-slate-700">
                                     <i data-lucide="file" class="w-8 h-8 mb-2"></i>
                                     <span class="text-xs truncate max-w-[80%]">Attachment</span>
                                 </a>
                             }
                             <div class="absolute inset-x-0 bottom-0 bg-gradient-to-t from-black/60 to-transparent p-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                 <p class="text-white text-[10px] truncate">@msg.Sender.Username</p>
                             </div>
                         </div>
                     }
                     @if(!Model.Messages.Any(m => !string.IsNullOrEmpty(m.AttachmentUrl)))
                     {
                         <div class="col-span-full text-center py-10 text-slate-400 dark:text-slate-600">No media shared yet.</div>
                     }
                 </div>
            </div>
        }
        else
        {
            <!-- LIST VIEW (Standard Chat) -->
            <div class="flex-1 overflow-y-auto p-4 md:p-6 space-y-6 bg-[#F0F2F5] dark:bg-slate-900" id="chatContainer">
                @if(!Model.Messages.Any())
                {
                     <div class="flex flex-col items-center justify-center h-full text-center pb-20">
                        <div class="w-20 h-20 bg-blue-50 dark:bg-slate-800 text-blue-500 dark:text-blue-400 rounded-full flex items-center justify-center mb-4">
                            <i data-lucide="message-square-heart" class="w-10 h-10"></i>
                        </div>
                        <h3 class="text-slate-800 dark:text-slate-200 font-bold text-lg">No messages yet</h3>
                        <p class="text-slate-400 dark:text-slate-500 mt-2 max-w-xs">Be the first to break the ice!</p>
                    </div>
                }
                
                @foreach(var msg in Model.Messages.OrderBy(m => m.SentDate))
                {
                    bool isMe = msg.SenderId == currentUserId;
                    bool hasAttachment = !string.IsNullOrEmpty(msg.AttachmentUrl);
                    bool isImg = hasAttachment && (msg.AttachmentContentType?.StartsWith("image/") ?? (msg.AttachmentUrl.EndsWith(".jpg") || msg.AttachmentUrl.EndsWith(".png") || msg.AttachmentUrl.EndsWith(".jpeg") || msg.AttachmentUrl.EndsWith(".gif")));
                    bool isDeleted = msg.IsDeleted;

                    <div class="flex w-full @(isMe ? "justify-end" : "justify-start") group/msg">
                        <!-- Avatar (Received only) -->
                        @if(!isMe)
                        {
                            <a asp-controller="Account" asp-action="Profile" asp-route-userId="@msg.SenderId" class="mr-3 flex-shrink-0 self-end mb-1 cursor-pointer hover:opacity-80 transition-opacity">
                                @if(!string.IsNullOrEmpty(msg.Sender.ProfilePictureUrl))
                                {
                                    <img src="@msg.Sender.ProfilePictureUrl" class="w-8 h-8 rounded-full object-cover shadow-sm bg-gray-200 dark:bg-slate-700" />
                                }
                                else
                                {
                                    <div class="w-8 h-8 rounded-full bg-gradient-to-br from-blue-400 to-indigo-500 text-white flex items-center justify-center text-xs font-bold shadow-sm">
                                        @((msg.Sender?.Username ?? "?").Substring(0,1).ToUpper())
                                    </div>
                                }
                            </a>
                        }

                        <div class="flex flex-col max-w-[75%] md:max-w-[60%] @(isMe ? "items-end" : "items-start")">
                            
                            @if(!isMe)
                            {
                                <a asp-controller="Account" asp-action="Profile" asp-route-userId="@msg.SenderId" class="text-[10px] text-slate-400 dark:text-slate-500 ml-1 mb-1 font-medium hover:underline hover:text-blue-500 transition-colors">@(msg.Sender?.Username ?? "Unknown")</a>
                            }
                            
                            <!-- Message Content -->
                            <div class="relative shadow-sm group/bubble @(isDeleted ? "bg-gray-100 border-gray-200 text-gray-400 italic" : (isMe ? "bg-[#004B87] text-white" : "bg-white dark:bg-slate-800 text-slate-800 dark:text-slate-200 border border-gray-100 dark:border-slate-700")) rounded-2xl @(isMe ? "rounded-tr-sm" : "rounded-tl-sm")">
                                
                                @if(isDeleted)
                                {
                                    <div class="px-4 py-2 text-sm flex items-center">
                                        <i data-lucide="trash-2" class="w-3 h-3 mr-2 opacity-50"></i> This message was deleted.
                                    </div>
                                }
                                else
                                {
                                    <!-- Options Trigger (Hover) -->
                                    @if(isMe || isAdmin)
                                    {
                                        <div class="absolute top-1 right-1 opacity-0 group-hover/bubble:opacity-100 transition-opacity bg-black/10 rounded-full p-0.5 z-10 cursor-pointer" onclick="toggleMessageOptions(@msg.Id)">
                                            <i data-lucide="chevron-down" class="w-3 h-3 text-white/80"></i>
                                        </div>
                                        
                                        <!-- Options Dropdown -->
                                        <div id="msgOptions-@msg.Id" class="hidden absolute top-5 right-2 bg-white dark:bg-slate-800 shadow-xl rounded-lg border border-gray-100 dark:border-slate-700 py-1 z-50 w-32 text-slate-800 dark:text-slate-200">
                                            @if(isMe)
                                            {
                                                <button onclick="enableEditMode(@msg.Id, `@msg.Message`)" class="w-full text-left px-3 py-1.5 text-xs hover:bg-gray-50 dark:hover:bg-slate-700 flex items-center">
                                                    <i data-lucide="edit-2" class="w-3 h-3 mr-2"></i> Edit
                                                </button>
                                            }
                                            <form asp-action="DeleteMessage" method="post" onsubmit="return confirm('Delete this message?');">
                                                <input type="hidden" name="messageId" value="@msg.Id" />
                                                <button type="submit" class="w-full text-left px-3 py-1.5 text-xs text-red-600 hover:bg-red-50 dark:hover:bg-red-900/20 flex items-center">
                                                    <i data-lucide="trash" class="w-3 h-3 mr-2"></i> Delete
                                                </button>
                                            </form>
                                        </div>
                                    }

                                    <!-- File/Image -->
                                    @if(hasAttachment)
                                    {
                                        <div class="@(isImg ? "" : "p-3 border-b " + (isMe?"border-white/10":"border-gray-100 dark:border-slate-700"))">
                                            @if(isImg)
                                            {
                                                // Image Display Standardization (Fixed Size/Constraint)
                                                <div class="max-w-[300px] max-h-[300px] overflow-hidden flex items-center justify-center bg-black/5">
                                                    <img src="@msg.AttachmentUrl" class="w-full h-full object-cover cursor-pointer hover:opacity-95 transition-opacity" onclick="openLightbox('@msg.AttachmentUrl')" />
                                                </div>
                                            }
                                            else
                                            {
                                                <!-- Rich File Card -->
                                                <div class="flex items-center gap-3">
                                                    <div class="w-10 h-10 rounded-lg @(isMe ? "bg-white/20" : "bg-gray-100 dark:bg-slate-700") flex items-center justify-center flex-shrink-0">
                                                        @if(msg.AttachmentContentType?.Contains("pdf") == true) { <i data-lucide="file-text" class="w-5 h-5"></i> }
                                                        else if(msg.AttachmentContentType?.Contains("word") == true) { <i data-lucide="file-type" class="w-5 h-5"></i> }
                                                        else { <i data-lucide="file" class="w-5 h-5"></i> }
                                                    </div>
                                                    <div class="min-w-0">
                                                        <p class="text-sm font-medium truncate max-w-[150px]" title="@msg.AttachmentOriginalName">@(msg.AttachmentOriginalName ?? "Attachment")</p>
                                                        <div class="flex items-center text-[10px] opacity-70">
                                                            <span>@((msg.AttachmentSize / 1024.0).ToString("0.0")) KB</span>
                                                            <span class="mx-1">&bull;</span>
                                                            <a href="@msg.AttachmentUrl" target="_blank" class="underline hover:decoration-2">Download</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    }
                                    
                                    <!-- Text (if exists) -->
                                    @if(!string.IsNullOrEmpty(msg.Message))
                                    {
                                        <div class="px-4 py-2" id="msgContent-@msg.Id">
                                            <p class="text-sm leading-relaxed whitespace-pre-wrap break-words">@msg.Message</p>
                                        </div>
                                        <!-- Edit Form (Hidden) -->
                                        <form asp-action="EditMessage" method="post" id="editForm-@msg.Id" class="hidden px-2 py-2">
                                            <input type="hidden" name="messageId" value="@msg.Id" />
                                            <textarea name="newContent" class="w-full text-sm text-slate-800 rounded p-1" rows="2">@msg.Message</textarea>
                                            <div class="flex justify-end gap-2 mt-1">
                                                <button type="button" onclick="cancelEdit(@msg.Id)" class="text-[10px] text-white/80 hover:text-white">Cancel</button>
                                                <button type="submit" class="text-[10px] bg-white text-[#004B87] px-2 py-0.5 rounded font-bold">Save</button>
                                            </div>
                                        </form>
                                    }
                                    
                                    <!-- Timestamp in Bubble -->
                                    <div class="px-3 pb-1.5 text-[9px] w-full text-right @(isMe ? "text-blue-200" : "text-slate-400 dark:text-slate-500") opacity-80 flex items-center justify-end gap-1">
                                        @if(msg.LastEditedDate.HasValue)
                                        {
                                            <span class="italic">edited</span>
                                        }
                                        @msg.SentDate.ToLocalTime().ToShortTimeString()
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }

        <!-- Input Area -->
        <div class="p-4 bg-white dark:bg-slate-800 border-t border-gray-200 dark:border-slate-700 mt-auto z-10 transition-colors">
            @if(isMember || isAdmin)
            {
                <form asp-action="PostMessage" method="post" enctype="multipart/form-data" class="flex flex-col gap-2">
                     <input type="hidden" name="groupId" value="@Model.Id" />
                     
                     <!-- File Preview (Simple JS handling) -->
                     <div id="filePreview" class="hidden px-4 py-2 bg-gray-50 dark:bg-slate-700/50 rounded-lg border border-dashed border-gray-300 dark:border-slate-600 flex items-center justify-between">
                         <span class="text-xs text-slate-500 dark:text-slate-400" id="fileName">Selected File</span>
                         <button type="button" onclick="clearFile()" class="text-slate-400 hover:text-red-500 dark:text-slate-500 dark:hover:text-red-400">
                             <i data-lucide="x" class="w-4 h-4"></i>
                         </button>
                     </div>

                     <div class="flex items-end gap-2">
                        <!-- Attach Button -->
                        <button type="button" onclick="document.getElementById('msgFileInput').click()" class="p-3 text-slate-400 hover:text-[#004B87] hover:bg-blue-50 dark:text-slate-500 dark:hover:text-blue-400 dark:hover:bg-slate-700 rounded-full transition-colors flex-shrink-0" title="Attach Media">
                            <i data-lucide="paperclip" class="w-5 h-5"></i>
                        </button>
                        <input type="file" name="file" id="msgFileInput" class="hidden" onchange="showFilePreview(this)" />
                        
                        <!-- Text Input -->
                        <div class="flex-1 bg-gray-100 dark:bg-slate-700 rounded-2xl focus-within:ring-2 focus-within:ring-[#004B87] dark:focus-within:ring-blue-500 focus-within:bg-white dark:focus-within:bg-slate-800 transition-all flex items-center px-4 py-1 border border-transparent dark:border-slate-600">
                            <textarea name="message" rows="1" class="w-full bg-transparent border-0 focus:ring-0 py-3 text-sm text-slate-700 dark:text-slate-200 placeholder-slate-500 dark:placeholder-slate-400 resize-none max-h-32" placeholder="Message @Model.Name..." oninput="this.style.height = ''; this.style.height = this.scrollHeight + 'px'"></textarea>
                        </div>
                        
                        <!-- Send Button -->
                        <button type="submit" class="p-3 bg-[#004B87] text-white rounded-full hover:bg-[#003d6e] transition-colors shadow-sm flex-shrink-0">
                            <i data-lucide="send-horizontal" class="w-5 h-5 ml-0.5"></i>
                        </button>
                     </div>
                </form>
            }
            else
            {
                 <div class="text-center p-4 bg-gray-50 dark:bg-slate-700/50 rounded-xl text-slate-500 dark:text-slate-400 text-sm">
                     You are viewing this chat as Admin.
                 </div>
            }
        </div>
    </div>
</div>

<!-- Image Lightbox -->
<div id="lightbox" class="fixed inset-0 z-[100] bg-black/95 hidden flex items-center justify-center p-4 backdrop-blur-sm">
    <div class="relative w-full h-full flex items-center justify-center">
        <img id="lightboxImg" src="" class="max-w-full max-h-full rounded-lg shadow-2xl object-contain" />
         <button onclick="closeLightbox()" class="absolute top-4 right-4 text-white hover:text-gray-300 bg-white/10 hover:bg-white/20 p-2 rounded-full transition-all">
             <i data-lucide="x" class="w-8 h-8"></i>
         </button>
    </div>
</div>

<!-- Members Modal (Enhanced with Live Search) -->
<div id="membersModal" class="fixed inset-0 bg-black/50 z-50 hidden flex items-center justify-center backdrop-blur-sm">
    <div class="bg-white dark:bg-slate-800 rounded-xl shadow-2xl w-full max-w-md mx-4 overflow-hidden flex flex-col max-h-[80vh] border border-gray-100 dark:border-slate-700">
        <div class="px-6 py-4 border-b border-gray-200 dark:border-slate-700 flex justify-between items-center bg-gray-50 dark:bg-slate-800">
            <h3 class="font-bold text-lg text-slate-800 dark:text-slate-100">Members (@Model.Members.Count)</h3>
            <button onclick="document.getElementById('membersModal').classList.add('hidden')" class="text-slate-400 hover:text-slate-700 dark:hover:text-slate-300">
                <i data-lucide="x" class="w-5 h-5"></i>
            </button>
        </div>
        
        <div class="p-4 border-b border-gray-200 dark:border-slate-700 bg-white dark:bg-slate-800 relative">
            @if(canManage)
            {
                <form asp-action="AddMember" method="post" class="flex gap-2 relative">
                    <input type="hidden" name="groupId" value="@Model.Id" />
                    <!-- Live Search Input -->
                    <div class="relative flex-1">
                        <input id="userSearchInput" name="username" class="w-full rounded-lg border-gray-300 dark:border-slate-600 bg-white dark:bg-slate-900 text-slate-800 dark:text-slate-100 text-sm px-4 py-2 outline-none focus:ring-2 focus:ring-[#004B87] dark:focus:ring-blue-500" placeholder="Search users to add..." autocomplete="off" required oninput="searchUsers(this.value)" />
                        <!-- Search Results Dropdown -->
                        <div id="searchResults" class="hidden absolute top-full left-0 right-0 mt-1 bg-white dark:bg-slate-800 border border-gray-200 dark:border-slate-700 rounded-lg shadow-xl z-50 max-h-48 overflow-y-auto">
                            <!-- Results populated by JS -->
                        </div>
                    </div>
                    
                    <button type="submit" class="bg-[#004B87] text-white px-3 py-2 rounded-lg font-bold text-sm hover:bg-[#003d6e] transition-colors">Add</button>
                </form>
            }
        </div>
        
        <div class="overflow-y-auto p-4 space-y-2 flex-1 scrollbar-thin scrollbar-thumb-gray-200 dark:scrollbar-thumb-slate-700">
             @foreach(var member in Model.Members.OrderByDescending(m => m.UserId == Model.OwnerId))
             {
                 <div class="flex items-center justify-between p-2 hover:bg-gray-50 dark:hover:bg-slate-700/50 rounded-lg transition-colors">
                     <div class="flex items-center">
                        @if(!string.IsNullOrEmpty(member.User.ProfilePictureUrl))
                        {
                            <img src="@member.User.ProfilePictureUrl" class="w-8 h-8 rounded-full object-cover mr-3 bg-gray-200 dark:bg-slate-600" />
                        }
                        else
                        {
                            <div class="w-8 h-8 rounded-full bg-blue-100 dark:bg-blue-900/50 flex items-center justify-center text-blue-600 dark:text-blue-300 font-bold mr-3 text-xs">
                                @(member.User.Username.Substring(0,1).ToUpper())
                            </div>
                        }
                        <div>
                            <p class="font-bold text-sm text-slate-800 dark:text-slate-200 flex items-center">
                                @member.User.Username
                                @if(member.UserId == Model.OwnerId)
                                {
                                    <span class="ml-2 text-[10px] bg-yellow-100 dark:bg-yellow-900/30 text-yellow-800 dark:text-yellow-500 px-1 rounded uppercase font-bold">Owner</span>
                                }
                            </p>
                            <p class="text-[10px] text-slate-400 dark:text-slate-500">Joined @member.JoinedDate.ToShortDateString()</p>
                        </div>
                     </div>
                     
                     @if(canManage && member.UserId != Model.OwnerId)
                     {
                         <form asp-action="RemoveMember" method="post" onsubmit="return confirm('Remove this member?');">
                             <input type="hidden" name="groupId" value="@Model.Id" />
                             <input type="hidden" name="memberId" value="@member.UserId" />
                             <button type="submit" class="text-red-400 hover:text-red-600 dark:text-red-500 dark:hover:text-red-400 p-1">
                                 <i data-lucide="trash-2" class="w-4 h-4"></i>
                             </button>
                         </form>
                     }
                 </div>
             }
        </div>
    </div>
</div>

<script>
    // Scroll to bottom
    var chatContainer = document.getElementById("chatContainer");
    if(chatContainer) {
        chatContainer.scrollTop = chatContainer.scrollHeight;
    }

    // Toggle Options Menu
    function toggleMenu() {
        var menu = document.getElementById('optionsMenu');
        menu.classList.toggle('hidden');
    }

    // File Preview
    function showFilePreview(input) {
        if(input.files && input.files[0]) {
            document.getElementById('filePreview').classList.remove('hidden');
            document.getElementById('fileName').textContent = input.files[0].name;
        }
    }
    
    function clearFile() {
        document.getElementById('msgFileInput').value = '';
        document.getElementById('filePreview').classList.add('hidden');
    }

    // Lightbox
    function openLightbox(url) {
        document.getElementById('lightboxImg').src = url;
        document.getElementById('lightbox').classList.remove('hidden');
    }
    
    function closeLightbox() {
        document.getElementById('lightbox').classList.add('hidden');
    }

    // Live User Search
    let searchTimeout;
    function searchUsers(query) {
        clearTimeout(searchTimeout);
        const resultsContainer = document.getElementById('searchResults');
        
        if (!query || query.length < 2) {
            resultsContainer.classList.add('hidden');
            return;
        }

        searchTimeout = setTimeout(() => {
            fetch(`/Collaboration/SearchUsers?query=${encodeURIComponent(query)}`)
                .then(response => response.json())
                .then(users => {
                    resultsContainer.innerHTML = '';
                    if (users.length > 0) {
                        users.forEach(user => {
                            const div = document.createElement('div');
                            div.className = "flex items-center p-2 hover:bg-gray-100 dark:hover:bg-slate-700 cursor-pointer border-b border-gray-50 dark:border-slate-700 last:border-0";
                            div.onclick = () => {
                                document.getElementById('userSearchInput').value = user.username;
                                resultsContainer.classList.add('hidden');
                            };
                            
                            const avatar = user.profilePictureUrl 
                                ? `<img src="${user.profilePictureUrl}" class="w-8 h-8 rounded-full object-cover mr-3">` 
                                : `<div class="w-8 h-8 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 text-xs font-bold mr-3">${user.username[0].toUpperCase()}</div>`;
                                
                            div.innerHTML = `
                                ${avatar}
                                <div>
                                    <p class="text-sm font-bold text-slate-800 dark:text-slate-200">${user.username}</p>
                                </div>
                            `;
                            resultsContainer.appendChild(div);
                        });
                        resultsContainer.classList.remove('hidden');
                    } else {
                        resultsContainer.classList.add('hidden');
                    }
                });
        }, 300);
    }
    
    // Message Editing Logic
    function toggleMessageOptions(msgId) {
        const menu = document.getElementById(`msgOptions-${msgId}`);
        // Close all others
        document.querySelectorAll('[id^=msgOptions-]').forEach(el => {
            if(el.id !== `msgOptions-${msgId}`) el.classList.add('hidden');
        });
        menu.classList.toggle('hidden');
    }
    
    function enableEditMode(msgId, currentContent) {
        document.getElementById(`msgContent-${msgId}`).classList.add('hidden');
        document.getElementById(`editForm-${msgId}`).classList.remove('hidden');
        document.getElementById(`msgOptions-${msgId}`).classList.add('hidden');
    }
    
    function cancelEdit(msgId) {
        document.getElementById(`msgContent-${msgId}`).classList.remove('hidden');
        document.getElementById(`editForm-${msgId}`).classList.add('hidden');
    }
    
    // Close dropdowns on click outside
    document.addEventListener('click', function(e) {
        if (!e.target.closest('.group\\/bubble')) {
             document.querySelectorAll('[id^=msgOptions-]').forEach(el => el.classList.add('hidden'));
        }
    });
</script>
