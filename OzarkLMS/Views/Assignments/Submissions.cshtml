@model OzarkLMS.Models.Assignment

@{
    ViewData["Title"] = "Submissions for " + Model.Title;
}

<div class="p-8 max-w-[1200px] mx-auto">
    <div class="mb-6 flex justify-between items-center">
        <div>
            <a asp-controller="Courses" asp-action="Details" asp-route-id="@Model.CourseId" asp-route-tab="assignments" class="text-sm font-medium text-slate-500 hover:text-[#004B87] transition-colors flex items-center mb-2">
                 <i data-lucide="arrow-left" class="w-4 h-4 mr-1"></i> Back to Course
            </a>
            <h1 class="text-2xl font-bold text-[#004B87]">Submissions: @Model.Title</h1>
        </div>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <table class="w-full text-left text-sm">
            <thead class="bg-gray-50 border-b border-gray-200 text-slate-500 font-bold uppercase">
                <tr>
                    <th class="px-6 py-4">Student</th>
                    <th class="px-6 py-4">Submitted At</th>
                    <th class="px-6 py-4">Content</th>
                    <th class="px-6 py-4">Score</th>
                    <th class="px-6 py-4">Action</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
                @foreach (var submission in ViewBag.Submissions as List<OzarkLMS.Models.Submission>)
                {
                    <tr class="hover:bg-blue-50/30 transition-colors">
                        <td class="px-6 py-4 font-bold text-slate-700">@submission.Student?.Username</td>
                        <td class="px-6 py-4 text-slate-500">@submission.SubmittedAt.ToLocalTime()</td>
                        <td class="px-6 py-4">
                            @if(!string.IsNullOrEmpty(submission.AttachmentUrl))
                            {
                                <a href="@submission.AttachmentUrl" target="_blank" class="text-[#004B87] hover:underline flex items-center"><i data-lucide="file" class="w-4 h-4 mr-1"></i> View File</a>
                            }
                            else if (!string.IsNullOrEmpty(submission.Content))
                            {
                                <span class="text-slate-600 italic">"@submission.Content.Substring(0, Math.Min(30, submission.Content.Length))..."</span>
                            }
                        </td>
                        <td class="px-6 py-4">
                            @if(submission.Score.HasValue)
                            {
                                <span class="bg-green-100 text-green-700 px-2 py-1 rounded font-bold">@submission.Score</span>
                            }
                            else
                            {
                                <span class="text-slate-400">-</span>
                            }
                        </td>
                        <td class="px-6 py-4">
                            <button onclick="openGradingModal(@submission.Id, '@submission.Score', '@submission.Feedback')" class="text-[#004B87] font-bold hover:underline">Grade</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        
        @if((ViewBag.Submissions as List<OzarkLMS.Models.Submission>).Count == 0)
        {
            <div class="p-12 text-center text-slate-400">
                No submissions yet.
            </div>
        }
    </div>
</div>

<!-- Simple Grading Modal -->
<div id="gradingModal" class="fixed inset-0 bg-black/50 hidden flex items-center justify-center z-50">
    <div class="bg-white rounded-xl shadow-2xl w-[500px] p-6">
        <h2 class="text-xl font-bold text-[#004B87] mb-4">Grade Submission</h2>
        <form asp-action="GradeSubmission" method="post">
            <input type="hidden" name="submissionId" id="modalSubmissionId" />
            <div class="mb-4">
                <label class="block text-sm font-bold text-slate-700 mb-2">Score</label>
                <input type="number" name="score" id="modalScore" class="w-full rounded-lg border-gray-300" required />
            </div>
            <div class="mb-6">
                 <label class="block text-sm font-bold text-slate-700 mb-2">Feedback</label>
                 <textarea name="feedback" id="modalFeedback" class="w-full rounded-lg border-gray-300" rows="3"></textarea>
            </div>
            <div class="flex justify-end gap-3">
                <button type="button" onclick="document.getElementById('gradingModal').classList.add('hidden')" class="px-4 py-2 text-slate-500 font-bold hover:bg-gray-100 rounded-lg">Cancel</button>
                <button type="submit" class="bg-[#004B87] text-white px-4 py-2 rounded-lg font-bold hover:bg-[#003d6e]">Save Grade</button>
            </div>
        </form>
    </div>
</div>

<script>
    function openGradingModal(id, score, feedback) {
        document.getElementById('modalSubmissionId').value = id;
        document.getElementById('modalScore').value = score || '';
        document.getElementById('modalFeedback').value = feedback || '';
        document.getElementById('gradingModal').classList.remove('hidden');
    }
</script>
