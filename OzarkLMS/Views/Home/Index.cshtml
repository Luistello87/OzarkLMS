@model OzarkLMS.ViewModels.DashboardViewModel
@using System.Security.Claims

<div class="p-8 max-w-[1600px] mx-auto">
    <!-- Header -->
    <div class="flex items-center justify-between mb-8">
        <div>
            <h1 class="text-3xl font-bold text-[#004B87] dark:text-white">Dashboard</h1>
            <p class="text-slate-500 dark:text-slate-400">Welcome back, @Model.User.Username</p>
        </div>
        <div class="flex space-x-3">
            @if(Model.User.Role == "instructor" || Model.User.Role == "admin")
            {
                <a asp-controller="Courses" asp-action="Create" class="bg-[#DA291C] dark:bg-red-600 text-white px-4 py-2 rounded-lg font-bold shadow-sm hover:bg-[#b01e14] dark:hover:bg-red-700 transition-colors flex items-center">
                    <i data-lucide="plus" class="w-4 h-4 mr-2"></i> New Course
                </a>
            }
        </div>
    </div>

    <div class="grid grid-cols-1 xl:grid-cols-4 gap-8">
        
        <!-- Main Content: Courses (3 Cols) -->
        <div class="xl:col-span-3 space-y-8">
            <!-- Courses Grid -->
            <div>
                 <h2 class="text-xl font-bold text-slate-800 dark:text-white mb-4 flex items-center">
                    <i data-lucide="book-open" class="w-5 h-5 mr-2 text-[#004B87] dark:text-white"></i> My Courses
                </h2>
                @if(!Model.Courses.Any())
                {
                    <div class="bg-white dark:bg-slate-800 rounded-xl border border-gray-200 dark:border-slate-700 p-12 text-center text-slate-400 dark:text-slate-500">
                        No courses available.
                    </div>
                }
                else
                {
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        @foreach(var course in Model.Courses)
                        {
                            <!-- Course Card -->
                            <div class="group bg-white dark:bg-slate-900 rounded-xl shadow-sm border border-gray-200 dark:border-slate-800 hover:shadow-md hover:border-[#004B87]/30 dark:hover:border-blue-500 transition-all duration-200 overflow-hidden flex flex-col h-[180px] relative">
                                <a asp-controller="Courses" asp-action="Details" asp-route-id="@course.Id" class="absolute inset-0 z-0"></a>
                                
                                <div class="h-1.5 w-full @course.Color relative z-10"></div>
                                <div class="p-5 flex-1 flex flex-col relative z-10 pointer-events-none">
                                    <div class="flex justify-between items-start mb-2 pointer-events-auto">
                                        <div class="text-xs font-bold text-slate-500 dark:text-slate-300 uppercase tracking-widest">@course.Code</div>
                                        @if(Model.User.Role == "admin" || Model.User.Role == "instructor")
                                        {
                                            <a asp-controller="Courses" asp-action="Edit" asp-route-id="@course.Id" class="text-xs text-blue-500 hover:underline relative z-20 font-bold bg-white dark:bg-slate-700 dark:text-blue-200 px-1 rounded">Edit</a>
                                        }
                                    </div>
                                    <h3 class="font-bold text-slate-800 dark:text-white text-lg group-hover:text-[#004B87] dark:group-hover:text-blue-300 transition-colors line-clamp-2">
                                        @course.Name
                                    </h3>
                                    <div class="mt-auto flex items-center pt-3 border-t border-gray-50 dark:border-slate-700">
                                         @if(course.Instructor != null)
                                         {
                                             <div class="flex items-center text-xs text-slate-500 dark:text-slate-300">
                                                 @if(!string.IsNullOrEmpty(course.Instructor.ProfilePictureUrl))
                                                 {
                                                     <img src="@course.Instructor.ProfilePictureUrl" class="w-5 h-5 rounded-full object-cover mr-2 bg-gray-200" alt="Instructor" />
                                                 }
                                                 else
                                                 {
                                                     <span class="w-5 h-5 rounded-full bg-blue-100 dark:bg-blue-800 text-[#004B87] dark:text-blue-100 flex items-center justify-center font-bold mr-2 text-[10px]">
                                                         @(course.Instructor.Username.Substring(0,1).ToUpper())
                                                     </span>
                                                 }
                                                 Dr. @course.Instructor.Username
                                             </div>
                                         }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>

            <!-- Sticky Notes Section -->
            <div>
                <div class="flex items-center justify-between mb-4">
                    <h2 class="text-xl font-bold text-slate-800 dark:text-white flex items-center">
                        <i data-lucide="sticky-note" class="w-5 h-5 mr-2 text-[#004B87] dark:text-white"></i> Sticky Notes
                    </h2>
                    <form asp-action="AddStickyNote" method="post" class="flex items-center bg-white dark:bg-slate-800 p-1 rounded-lg border border-gray-200 dark:border-slate-600 shadow-sm">
                        <input name="content" class="bg-transparent px-3 py-1 text-sm focus:outline-none w-48 text-slate-700 dark:text-white placeholder-slate-400" placeholder="Quick note..." required autocomplete="off" />
                        <select name="color" class="bg-transparent text-sm text-slate-500 dark:text-slate-300 outline-none cursor-pointer border-l border-gray-200 dark:border-slate-600 mx-2 px-2">
                            <option value="bg-yellow-200 dark:bg-yellow-900/80 dark:text-yellow-100">Yellow</option>
                            <option value="bg-blue-200 dark:bg-blue-900/80 dark:text-blue-100">Blue</option>
                            <option value="bg-green-200 dark:bg-green-900/80 dark:text-green-100">Green</option>
                            <option value="bg-pink-200 dark:bg-pink-900/80 dark:text-pink-100">Pink</option>
                        </select>
                        <button type="submit" class="bg-[#004B87] dark:bg-blue-700 text-white p-1.5 rounded-md hover:bg-[#003d6e] dark:hover:bg-blue-800 transition-colors">
                            <i data-lucide="plus" class="w-4 h-4"></i>
                        </button>
                    </form>
                </div>

                <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
                    @foreach (var note in Model.StickyNotes)
                    {
                        <div class="@note.Color p-4 rounded-xl shadow-sm relative group transition-transform hover:-translate-y-1 h-40 flex flex-col transform rotate-1 hover:rotate-0 duration-300 border-transparent dark:border dark:border-white/20">
                            <form asp-action="UpdateStickyNote" method="post" class="h-full">
                                <input type="hidden" name="id" value="@note.Id" />
                                <textarea name="content" onblur="this.form.submit()" class="w-full h-full bg-transparent border-0 resize-none focus:ring-0 text-slate-800 dark:text-white font-medium placeholder-slate-500 dark:placeholder-slate-400 text-sm leading-relaxed p-0">@note.Content</textarea>
                            </form>
                            <form asp-action="DeleteStickyNote" method="post" class="absolute top-2 right-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                <input type="hidden" name="id" value="@note.Id" />
                                <button type="submit" class="text-slate-600 dark:text-slate-200 hover:text-red-600 dark:hover:text-red-300 p-1 rounded-full hover:bg-white/50 dark:hover:bg-black/30 transition-colors">
                                    <i data-lucide="x" class="w-3 h-3"></i>
                                </button>
                            </form>
                        </div>
                    }
                    @if (!Model.StickyNotes.Any())
                    {
                        <div class="col-span-full border-2 border-dashed border-gray-200 dark:border-slate-600 rounded-xl p-6 flex items-center justify-center text-slate-400 dark:text-slate-400 bg-gray-50/50 dark:bg-slate-800/50">
                            <span class="text-sm">Use the input above to create a sticky note!</span>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Right Column: Assignments & Activity (1 Col) -->
        <div class="space-y-6">


            <!-- Upcoming & Announcements Section -->
            <!-- Calendar Widget -->
            <div class="col-span-1 lg:col-span-1 flex flex-col h-full bg-white dark:bg-slate-900 rounded-3xl shadow-sm border border-slate-100 dark:border-slate-800 overflow-visible relative min-h-[300px]">
                <div id="calendar-root" class="p-5 h-full flex flex-col">
                    <!-- Calendar rendered here via JS -->
                </div>
            </div>

            <script>
                document.addEventListener('DOMContentLoaded', function() {
                    const courses = @Json.Serialize(Model.Courses.Select(c => new {
                        id = c.Id,
                        name = c.Name,
                        assignments = c.Assignments.Select(a => new {
                            id = a.Id,
                            title = a.Title,
                            dueDate = a.DueDate.ToString("yyyy-MM-dd"),
                            courseName = c.Name
                        })
                    }));

                    const events = [];
                    courses.forEach(c => {
                        if(c.assignments) {
                            c.assignments.forEach(a => {
                                events.push({
                                    date: a.dueDate,
                                    title: a.title,
                                    courseName: a.courseName,
                                    type: 'assignment'
                                });
                            });
                        }
                    });

                    let currentDate = new Date();
                    const calendarRoot = document.getElementById('calendar-root');

                    function renderCalendar() {
                        const year = currentDate.getFullYear();
                        const month = currentDate.getMonth();
                        
                        // First Day & Days in Month
                        const firstDay = new Date(year, month, 1).getDay();
                        const daysInMonth = new Date(year, month + 1, 0).getDate();
                        const monthName = currentDate.toLocaleString('default', { month: 'long' });

                        // HTML Structure
                        let html = `
                            <div class="flex items-center justify-between mb-3">
                                <h3 class="font-bold text-slate-800 dark:text-white text-base">${monthName} ${year}</h3>
                                <div class="flex space-x-1">
                                    <button class="cal-nav-prev p-1 hover:bg-slate-100 dark:hover:bg-slate-700 rounded-full text-slate-500 dark:text-slate-400 transition-colors">
                                        <i data-lucide="chevron-left" class="w-4 h-4"></i>
                                    </button>
                                    <button class="cal-nav-next p-1 hover:bg-slate-100 dark:hover:bg-slate-700 rounded-full text-slate-500 dark:text-slate-400 transition-colors">
                                        <i data-lucide="chevron-right" class="w-4 h-4"></i>
                                    </button>
                                </div>
                            </div>
                            <div class="grid grid-cols-7 text-center mb-2">
                                ${['S','M','T','W','T','F','S'].map(d => `<div class="text-[10px] font-bold text-slate-400 dark:text-slate-500">${d}</div>`).join('')}
                            </div>
                            <div class="grid grid-cols-7 gap-y-1 place-items-center">
                        `;

                        // Empty slots
                        for(let i=0; i<firstDay; i++) {
                            html += `<div class="h-8 w-8"></div>`;
                        }

                        // Days
                        const today = new Date();
                        const isCurrentMonth = today.getMonth() === month && today.getFullYear() === year;

                        for(let d=1; d<=daysInMonth; d++) {
                            const dateStr = `${year}-${String(month+1).padStart(2, '0')}-${String(d).padStart(2, '0')}`;
                            const dayEvents = events.filter(e => e.date === dateStr);
                            const isToday = isCurrentMonth && today.getDate() === d;

                            const activeClass = isToday ? 'bg-[#BF2604] text-white shadow-md shadow-orange-200 dark:shadow-none' : 'text-slate-700 dark:text-slate-300 hover:bg-slate-50 dark:hover:bg-slate-700';
                            
                            // Dots
                            let dotsHtml = '';
                            if(dayEvents.length > 0) {
                                dotsHtml = `<div class="absolute bottom-1 flex space-x-0.5 justify-center w-full">`;
                                dayEvents.slice(0, 3).forEach(ev => {
                                    dotsHtml += `<div class="w-0.5 h-0.5 rounded-full ${ev.type === 'event' ? 'bg-blue-500' : 'bg-[#BF2604]'}"></div>`;
                                });
                                dotsHtml += `</div>`;
                            }

                            // Tooltip content
                            let tooltipData = "";
                            if(dayEvents.length > 0) {
                                const list = dayEvents.map(e => `<div class='text-xs p-1 mb-1 rounded bg-red-50 dark:bg-red-900/30 text-red-700 dark:text-red-300'>${e.title}</div>`).join('');
                                tooltipData = `data-tooltip="${list}" data-date="${dateStr}"`;
                            }

                            html += `
                                <div class="h-8 w-8 flex items-center justify-center relative group cursor-pointer rounded-full transition-all duration-200 ${activeClass} cal-day" ${tooltipData}>
                                    <span class="text-xs font-medium relative z-10">${d}</span>
                                    ${dotsHtml}
                                    ${dayEvents.length > 0 ? `
                                        <div class="absolute bottom-full mb-2 left-1/2 transform -translate-x-1/2 bg-white dark:bg-slate-800 shadow-xl rounded-xl p-3 w-48 hidden group-hover:block z-50 border border-slate-100 dark:border-slate-700 text-left pointer-events-none animate-in fade-in zoom-in-95 duration-200">
                                            <p class="text-[10px] font-bold text-slate-400 mb-2 uppercase tracking-wider">Assignments</p>
                                            ${dayEvents.map(e => `
                                                <div class="text-xs p-2 rounded bg-slate-50 dark:bg-slate-700/50 text-slate-700 dark:text-slate-200 mb-1 border-l-2 border-[#BF2604]">
                                                    <div class="font-bold truncate">${e.title}</div>
                                                    <div class="text-[10px] text-slate-400 truncate">${e.courseName}</div>
                                                </div>
                                            `).join('')}
                                        </div>
                                    ` : ''}
                                </div>
                            `;
                        }

                        html += `</div>`;

                        // Upcoming Tasks Section
                        const upcomingEvents = events
                            .filter(e => new Date(e.date) >= new Date().setHours(0,0,0,0))
                            .sort((a, b) => new Date(a.date) - new Date(b.date))
                            .slice(0, 3); // Top 3

                        if (upcomingEvents.length > 0) {
                            html += `
                                <div class="mt-4 pt-3 border-t border-slate-100 dark:border-slate-700">
                                    <h4 class="text-[10px] font-bold text-slate-400 dark:text-slate-500 uppercase tracking-wilder mb-2">Upcoming Tasks</h4>
                                    <div class="space-y-2">
                            `;
                            
                            upcomingEvents.forEach(ev => {
                                const evDate = new Date(ev.date + 'T00:00:00'); // Force local time
                                const dateDisplay = evDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
                                
                                html += `
                                    <div class="flex items-start group cursor-pointer hover:bg-slate-50 dark:hover:bg-slate-700/50 p-1.5 -mx-1.5 rounded-lg transition-colors">
                                        <div class="w-1 h-1 rounded-full bg-[#BF2604] mt-1.5 mr-2 shrink-0"></div>
                                        <div class="flex-1 min-w-0">
                                            <p class="text-xs font-bold text-slate-700 dark:text-slate-200 truncate">${ev.title}</p>
                                            <div class="flex items-center justify-between mt-0.5">
                                                <span class="text-[10px] text-slate-400 truncate max-w-[60%]">${ev.courseName}</span>
                                                <span class="text-[9px] font-medium text-slate-400 bg-slate-100 dark:bg-slate-700 px-1.5 py-0.5 rounded">${dateDisplay}</span>
                                            </div>
                                        </div>
                                    </div>
                                `;
                            });

                            html += `</div></div>`;
                        } else {
                             html += `
                                <div class="mt-4 pt-3 border-t border-slate-100 dark:border-slate-700">
                                    <p class="text-[10px] text-slate-400 text-center py-2">No upcoming tasks</p>
                                </div>
                            `;
                        }

                        calendarRoot.innerHTML = html;

                        // Re-initialize Lucide icons for the new content
                        lucide.createIcons();

                        // Bind Events
                        calendarRoot.querySelector('.cal-nav-prev').addEventListener('click', () => {
                            currentDate.setMonth(currentDate.getMonth() - 1);
                            renderCalendar();
                        });
                        calendarRoot.querySelector('.cal-nav-next').addEventListener('click', () => {
                            currentDate.setMonth(currentDate.getMonth() + 1);
                            renderCalendar();
                        });
                    }

                    renderCalendar();
                });
            </script>
            <!-- Access Rights Info -->
            <div class="bg-blue-50 dark:bg-blue-900/20 rounded-xl p-4 border border-blue-100 dark:border-blue-900/30">
                <div class="flex items-center text-[#004B87] dark:text-blue-300 mb-2">
                    <i data-lucide="shield-check" class="w-4 h-4 mr-2"></i>
                    <span class="text-xs font-bold uppercase">Current Access</span>
                </div>
                <p class="text-xs text-blue-800 dark:text-blue-200 leading-relaxed">
                    You are logged in as <span class="font-bold uppercase">@Model.User.Role</span>.
                    @if(Model.User.Role == "student") { <span>Restricted from Admin & Instructor panels.</span> }
                    else { <span>Authorized for management features.</span> }
                </p>
            </div>
        </div>
    </div>
</div>
