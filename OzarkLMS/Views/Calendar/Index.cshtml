@model IEnumerable<OzarkLMS.Models.CalendarEvent>
@using System.Text.Json

@{
    ViewData["Title"] = "Academic Calendar";
    // Serialize events to JSON for client-side rendering
    var eventsJson = JsonSerializer.Serialize(Model.Select(e => new {
        id = e.Id,
        title = e.Title,
        start = e.Start, // ISO 8601 string
        end = e.End,
        color = e.Color
    }));
}

<div class="p-8 max-w-[1400px] mx-auto min-h-screen">
    <!-- Solar System Masterpiece Banner -->
    <div class="relative w-full h-40 md:h-52 rounded-3xl overflow-hidden mb-8 shadow-2xl bg-black group selection:bg-cyan-500/30">
        
        <!-- Deep Space Background & Stars -->
        <div class="absolute inset-0 bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-slate-900 via-[#0B0B15] to-black">
            <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')] opacity-70 animate-twinkle-bg"></div>
        </div>

        <!-- Section 1: The Star (Sun) -->
        <div class="absolute inset-0 w-full h-full" style="clip-path: polygon(0 0, 22% 0, 12% 100%, 0 100%);">
            <div class="absolute inset-0 bg-gradient-to-br from-orange-500 via-red-600 to-rose-900/50 mix-blend-screen"></div>
            <svg class="absolute inset-0 w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="none">
                <circle cx="0" cy="50" r="45" fill="url(#sun-core)" class="animate-pulse-glow" />
                <path d="M0,50 Q25,20 50,50 Q25,80 0,50" fill="url(#flare-grad)" opacity="0.4" class="animate-sway origin-left" style="transform-origin: 0 50px; animation-duration: 5s"/>
                <defs>
                    <radialGradient id="sun-core" cx="50%" cy="50%" r="50%">
                        <stop offset="0%" style="stop-color:#fff700;stop-opacity:1" />
                        <stop offset="60%" style="stop-color:#ff8800;stop-opacity:1" />
                        <stop offset="100%" style="stop-color:#ff0000;stop-opacity:0" />
                    </radialGradient>
                    <linearGradient id="flare-grad" x1="0%" y1="0%" x2="100%" y2="0%">
                        <stop offset="0%" style="stop-color:#ffaa00;stop-opacity:0.8" />
                        <stop offset="100%" style="stop-color:#ff0000;stop-opacity:0" />
                    </linearGradient>
                </defs>
            </svg>
        </div>

        <!-- Section 2: The Red Planet (Mars) - Partially Obscured -->
        <div class="absolute inset-0 w-full h-full" style="clip-path: polygon(22% 0, 42% 0, 32% 100%, 12% 100%);">
            <svg class="absolute inset-0 w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="xMidYMid meet">
                <radialGradient id="mars-grad" cx="40%" cy="40%" r="50%">
                    <stop offset="0%" stop-color="#ef4444" /> <!-- Red-500 -->
                    <stop offset="100%" stop-color="#7f1d1d" /> <!-- Red-900 -->
                </radialGradient>
                <circle cx="50" cy="50" r="18" fill="url(#mars-grad)" />
                <circle cx="50" cy="50" r="18" fill="url(#sphere-shadow)" opacity="0.4" />
            </svg>
        </div>

        <!-- Section 3: The Living World (Earth Model) - CENTER STAGE -->
        <!-- Removed clip-path to fix "borders" issue -->
        <div class="absolute inset-0 w-full h-full">
            <svg class="absolute inset-0 w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="xMidYMid meet">
                 <defs>
                    <radialGradient id="earth-ocean-2" cx="50%" cy="50%" r="50%">
                        <stop offset="0%" stop-color="#2563eb" /> <!-- Blue-600 -->
                        <stop offset="80%" stop-color="#1e40af" /> <!-- Blue-800 -->
                        <stop offset="100%" stop-color="#172554" /> <!-- Blue-950 -->
                    </radialGradient>
                    <radialGradient id="earth-atmos-2" cx="50%" cy="50%" r="50%">
                         <stop offset="70%" stop-color="#fff" stop-opacity="0" />
                         <stop offset="100%" stop-color="#60a5fa" stop-opacity="0.3" /> <!-- Blue-400 glow -->
                    </radialGradient>
                </defs>
                
                <!-- Atmosphere Glow -->

                
                <!-- Earth Sphere -->
                <g class="animate-float">
                    <circle cx="50" cy="50" r="32" fill="url(#earth-ocean-2)" />
                    <!-- Land Masses (Abstract) -->
                    <path d="M35,35 Q45,25 55,35 T70,45 T60,65 T40,60 T30,45 Z" fill="#15803d" opacity="0.8" /> <!-- Green-700 -->
                    <path d="M25,55 Q30,65 40,70 T45,60" fill="#15803d" opacity="0.6" />
                    <path d="M60,25 Q70,30 75,40" fill="#15803d" opacity="0.6" />
                    
                    <!-- Clouds -->
                    <g opacity="0.4">
                         <path d="M30,40 Q40,35 50,40 T60,40" stroke="white" stroke-width="2" stroke-linecap="round" filter="blur(1px)" />
                         <path d="M40,60 Q50,65 60,60" stroke="white" stroke-width="1.5" stroke-linecap="round" filter="blur(1px)" />
                    </g>
                    
                    <!-- Shadow for depth -->
                    <circle cx="50" cy="50" r="32" fill="url(#sphere-shadow)" opacity="0.4" />
                </g>

                <!-- 3D Moon Orbit (Horizontal X-Axis) -->
                <g class="animate-orbit-horizontal" style="transform-origin: 50px 50px;">
                    <!-- Moon centered at 50, moved by animation -->
                    <circle cx="50" cy="50" r="5" fill="#e2e8f0" filter="drop-shadow(0 0 2px rgba(255,255,255,0.5))" />
                    <circle cx="50" cy="50" r="5" fill="url(#sphere-shadow)" opacity="0.3" />
                </g>
            </svg>
        </div>

        <!-- Section 4: The Ringed Jewel (Saturn) -->
        <div class="absolute inset-0 w-full h-full" style="clip-path: polygon(62% 0, 82% 0, 72% 100%, 52% 100%);">
            <svg class="absolute inset-0 w-full h-full" viewBox="0 0 100 100" preserveAspectRatio="xMidYMid meet">
                <g transform="translate(50,50) rotate(20) translate(-50,-50)">
                    <!-- Rings Back -->
                    <ellipse cx="50" cy="50" rx="36" ry="10" fill="none" stroke="#ca8a04" stroke-width="6" stroke-opacity="0.4" />
                    <ellipse cx="50" cy="50" rx="32" ry="8" fill="none" stroke="#fef08a" stroke-width="1" stroke-opacity="0.3" />
                    <!-- Planet -->
                    <circle cx="50" cy="50" r="16" fill="#eab308" />
                    <circle cx="50" cy="50" r="16" fill="url(#sphere-shadow)" opacity="0.3" />
                    <!-- Rings Front -->
                    <path d="M14,50 A36,10 0 0,0 86,50" fill="none" stroke="#fefce8" stroke-width="2" stroke-opacity="0.7" />
                </g>
            </svg>
        </div>

        <!-- Section 5: The Outer Limits (Neptune) -->
        <div class="absolute inset-0 w-full h-full" style="clip-path: polygon(82% 0, 100% 0, 100% 100%, 72% 100%);">
            <svg class="absolute inset-0 w-full h-full" viewBox="0 0 100 100">
                <circle cx="70" cy="30" r="10" fill="#0ea5e9" />
                <circle cx="70" cy="30" r="10" fill="url(#sphere-shadow)" opacity="0.4" />
            </svg>
        </div>

        <!-- Global Overlay: Meteors & Comets (Unclipped) -->
        <svg class="absolute inset-0 w-full h-full pointer-events-none overflow-visible" viewBox="0 0 800 200" preserveAspectRatio="none">
            <defs>
                <linearGradient id="comet-tail" x1="0%" y1="0%" x2="100%" y2="0%">
                    <stop offset="0%" stop-color="white" stop-opacity="0" />
                    <stop offset="100%" stop-color="white" stop-opacity="0.8" />
                </linearGradient>
                <radialGradient id="sphere-shadow" cx="30%" cy="30%" r="70%">
                    <stop offset="0%" stop-color="white" stop-opacity="0.2"/>
                    <stop offset="100%" stop-color="black" stop-opacity="0.6"/>
                </radialGradient>
            </defs>
            <!-- Shooting Stars with NEGATIVE delays for instant start -->
            <path d="M-50,120 L150,20" stroke="url(#comet-tail)" stroke-width="1" stroke-linecap="round" class="animate-shoot-fast" style="animation-delay: -2s;"/>
            <path d="M100,-20 L300,80" stroke="url(#comet-tail)" stroke-width="1.5" stroke-linecap="round" class="animate-shoot-medium" style="animation-delay: -5s;"/>
            <path d="M600,-50 L900,100" stroke="url(#comet-tail)" stroke-width="1" stroke-linecap="round" class="animate-shoot-slow" style="animation-delay: -1s;"/>
            <path d="M850,50 L650,150" stroke="url(#comet-tail)" stroke-width="0.8" stroke-linecap="round" class="animate-shoot-medium" style="animation-delay: -3.5s; opacity: 0.6"/>
            
            <!-- Distant Nebulas -->
            <circle cx="600" cy="150" r="80" fill="#4c1d95" filter="blur(40px)" opacity="0.15" />
            <circle cx="200" cy="50" r="60" fill="#0f766e" filter="blur(30px)" opacity="0.1" />
        </svg>

        <!-- Content Overlay -->
        <div class="absolute inset-0 flex flex-col justify-center px-8 md:px-12 z-20 pointer-events-none">
            <div class="bg-slate-950/60 backdrop-blur-md p-6 rounded-2xl inline-block max-w-fit border border-white/10 shadow-2xl relative overflow-hidden">
                <!-- Subtle gradient glow -->
                <div class="absolute inset-0 bg-gradient-to-r from-indigo-500/10 to-purple-500/10 opacity-50"></div>
                
                <h1 class="text-3xl md:text-5xl font-bold text-white mb-2 tracking-normal drop-shadow-lg relative z-10">
                    Schedule
                </h1>
                <p class="text-blue-100 text-base md:text-lg font-normal tracking-wide opacity-90 relative z-10">
                    Organize your time, track your tasks, and deadlines.
                </p>
            </div>
        </div>
    </div>

    <!-- Controls Toolbar -->
    <div class="flex items-center justify-between bg-white dark:bg-slate-900 p-4 rounded-2xl shadow-sm border border-slate-100 dark:border-slate-800 mb-8">
        <div class="flex items-center gap-4">
            <button id="prevMonthBtn" class="p-2.5 hover:bg-slate-50 dark:hover:bg-slate-800 rounded-xl transition-colors text-slate-600 dark:text-slate-400 group">
                <i data-lucide="chevron-left" class="w-6 h-6 group-hover:-translate-x-1 transition-transform"></i>
            </button>
            <h2 id="currentMonthDisplay" class="text-2xl font-bold w-48 text-center text-slate-800 dark:text-white tabular-nums"></h2>
            <button id="nextMonthBtn" class="p-2.5 hover:bg-slate-50 dark:hover:bg-slate-800 rounded-xl transition-colors text-slate-600 dark:text-slate-400 group">
                <i data-lucide="chevron-right" class="w-6 h-6 group-hover:translate-x-1 transition-transform"></i>
            </button>
        </div>
        
        <div class="flex items-center gap-3">
            <button onclick="showEventsList()" class="bg-white dark:bg-slate-800 hover:bg-slate-50 dark:hover:bg-slate-700 text-slate-700 dark:text-slate-200 px-6 py-3 rounded-xl font-bold text-sm shadow-sm border border-slate-200 dark:border-slate-700 transition-all hover:scale-105 active:scale-95">
                View Events
            </button>
            <button onclick="document.getElementById('addEventModal').showModal()" class="bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-3 rounded-xl font-bold text-sm shadow-lg shadow-indigo-500/20 transition-all hover:scale-105 active:scale-95 flex items-center gap-2">
                <i data-lucide="plus" class="w-5 h-5"></i>
                <span class="hidden sm:inline">Add Event</span>
            </button>
        </div>
    </div>

    <style>
        .origin-center-50 { transform-box: fill-box; transform-origin: center; }
        
        /* 
           Horizontal X-Axis Orbit
           Moves Right -> Back -> Left -> Front -> Right
        */
        @@keyframes orbit-horizontal {
            0% { transform: translateX(55px) scale(0.8); z-index: 0; }
            25% { transform: translateX(0px) scale(0.65); z-index: 0; }
            49% { z-index: 0; }
            50% { transform: translateX(-55px) scale(0.8); z-index: 10; }
            75% { transform: translateX(0px) scale(1.3); z-index: 10; }
            99% { z-index: 10; }
            100% { transform: translateX(55px) scale(0.8); z-index: 0; }
        }

        /* Varied Meteor Speeds */
        @@keyframes shoot-fast {
            0% { transform: translate(-100px, -50px) scale(0.5); opacity: 0; }
            20% { opacity: 1; }
            100% { transform: translate(500px, 250px) scale(1.2); opacity: 0; }
        }
        @@keyframes shoot-medium {
            0% { transform: translate(-50px, -100px) scale(0.5); opacity: 0; }
            20% { opacity: 1; }
            100% { transform: translate(400px, 350px) scale(1); opacity: 0; }
        }
        @@keyframes shoot-slow {
            0% { transform: translate(-100px, 50px) scale(0.4); opacity: 0; }
            20% { opacity: 1; }
            100% { transform: translate(600px, 400px) scale(0.9); opacity: 0; }
        }

        @@keyframes pulse-glow {
            0%, 100% { filter: drop-shadow(0 0 15px rgba(255, 140, 0, 0.6)); transform: scale(1); }
            50% { filter: drop-shadow(0 0 30px rgba(255, 200, 50, 0.9)); transform: scale(1.02); }
        }
        @@keyframes pulse-slow {
            0%, 100% { opacity: 0.5; transform: scale(1); }
            50% { opacity: 0.8; transform: scale(1.05); }
        }
        @@keyframes twinkle-bg {
            0%, 100% { opacity: 0.5; }
            50% { opacity: 0.8; }
        }
        @@keyframes spin-slow-reverse {
            from { transform: rotate(360deg); }
            to { transform: rotate(0deg); }
        }
        @@keyframes float {
            0%, 100% { transform: translateY(0); }
            50% { transform: translateY(-3px); }
        }
        @@keyframes sway {
            0%, 100% { transform: rotate(-5deg); }
            50% { transform: rotate(5deg); }
        }
        
        .animate-orbit-horizontal { animation: orbit-horizontal 12s linear infinite; }
        .animate-shoot-fast { animation: shoot-fast 4s linear infinite; }
        .animate-shoot-medium { animation: shoot-medium 7s linear infinite; }
        .animate-shoot-slow { animation: shoot-slow 10s linear infinite; }
        
        .animate-pulse-glow { animation: pulse-glow 4s ease-in-out infinite; }
        .animate-pulse-slow { animation: pulse-slow 6s ease-in-out infinite; }
        .animate-twinkle-bg { animation: twinkle-bg 6s ease-in-out infinite; }
        .animate-spin-slow-reverse { animation: spin-slow-reverse 30s linear infinite; }
        .animate-float { animation: float 6s ease-in-out infinite; }
        .animate-sway { animation: sway 8s ease-in-out infinite; }
    </style>

    <!-- Calendar Grid -->
    <div class="bg-white dark:bg-slate-900 rounded-3xl shadow-xl shadow-slate-200/50 dark:shadow-none border border-slate-100 dark:border-slate-800 overflow-hidden">
        <!-- Weekday Headers -->
        <div class="grid grid-cols-7 border-b border-slate-100 dark:border-slate-800 bg-slate-50/50 dark:bg-slate-900/50">
            @foreach(var day in new[]{"Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat"})
            {
                <div class="py-4 text-center text-xs font-bold text-slate-400 uppercase tracking-widest">@day</div>
            }
        </div>
        
        <!-- Days Grid -->
        <div id="calendarGrid" class="grid grid-cols-7 auto-rows-fr min-h-[600px] bg-slate-100 dark:bg-slate-800 gap-px border-b border-slate-100 dark:border-slate-800">
            <!-- JS will populate this -->
        </div>
    </div>
</div>

<!-- Add Event Modal -->
<dialog id="addEventModal" class="backdrop:backdrop-blur-sm backdrop:bg-slate-900/20 rounded-2xl shadow-2xl p-0 w-full max-w-md bg-transparent open:animate-in open:fade-in open:zoom-in-95 closed:animate-out closed:fade-out closed:zoom-out-95">
    <div class="bg-white dark:bg-slate-900 p-6 border border-slate-100 dark:border-slate-800">
        <div class="flex items-center justify-between mb-6">
            <h3 class="text-xl font-bold text-slate-800 dark:text-white">New Event</h3>
            <button onclick="document.getElementById('addEventModal').close()" class="p-2 hover:bg-slate-100 dark:hover:bg-slate-800 rounded-full text-slate-400 transition-colors">
                <i data-lucide="x" class="w-5 h-5"></i>
            </button>
        </div>
        
        <form asp-action="Create" method="post" class="space-y-4">
            <div>
                <label class="block text-xs font-bold text-slate-500 uppercase mb-1">Title</label>
                <input name="title" class="w-full bg-slate-50 dark:bg-slate-950 border border-slate-200 dark:border-slate-800 rounded-xl px-4 py-3 text-sm focus:ring-2 focus:ring-blue-500 outline-none dark:text-white transition-all" placeholder="e.g. Final Exam" required />
            </div>
            
            <div class="grid grid-cols-2 gap-4">
                <div>
                     <label class="block text-xs font-bold text-slate-500 uppercase mb-1">Start</label>
                     <input name="start" type="datetime-local" class="w-full bg-slate-50 dark:bg-slate-950 border border-slate-200 dark:border-slate-800 rounded-xl px-4 py-3 text-sm focus:ring-2 focus:ring-blue-500 outline-none dark:text-white [&::-webkit-calendar-picker-indicator]:dark:invert" required />
                </div>
                 <div>
                     <label class="block text-xs font-bold text-slate-500 uppercase mb-1">End (Optional)</label>
                     <input name="end" type="datetime-local" class="w-full bg-slate-50 dark:bg-slate-950 border border-slate-200 dark:border-slate-800 rounded-xl px-4 py-3 text-sm focus:ring-2 focus:ring-blue-500 outline-none dark:text-white [&::-webkit-calendar-picker-indicator]:dark:invert" />
                </div>
            </div>

            <div class="pt-4 flex justify-end gap-3">
                <button type="button" onclick="document.getElementById('addEventModal').close()" class="px-5 py-2.5 rounded-xl font-bold text-sm text-slate-500 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors">Cancel</button>
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2.5 rounded-xl font-bold text-sm shadow-lg shadow-blue-500/25 transition-all">Save Event</button>
            </div>
        </form>
    </div>
</dialog>

<!-- Events List Modal -->
<dialog id="eventsListModal" class="backdrop:backdrop-blur-sm backdrop:bg-slate-900/20 rounded-2xl shadow-2xl p-0 w-full max-w-2xl bg-transparent open:animate-in open:fade-in open:zoom-in-95 closed:animate-out closed:fade-out closed:zoom-out-95">
    <div class="bg-white dark:bg-slate-900 p-8 border border-slate-100 dark:border-slate-800">
        <div class="flex items-center justify-between mb-8">
