@model IEnumerable<OzarkLMS.Models.CalendarEvent>
@using System.Text.Json

@{
    ViewData["Title"] = "Academic Calendar";
    // Serialize events to JSON for client-side rendering
    var eventsJson = JsonSerializer.Serialize(Model.Select(e => new {
        id = e.Id,
        title = e.Title,
        start = e.Start, // ISO 8601 string
        end = e.End,
        color = e.Color
    }));
}

<div class="p-8 max-w-[1400px] mx-auto min-h-screen">
    <!-- Dynamic Banner -->
    <div class="relative w-full h-48 md:h-64 rounded-3xl overflow-hidden mb-8 shadow-2xl group">
        <!-- Animated Gradient Background -->
        <div class="absolute inset-0 bg-gradient-to-br from-blue-700 via-violet-600 to-blue-500 bg-[length:200%_200%] animate-gradient-xy"></div>
        
        <!-- Artistic SVG Elements -->
        <svg class="absolute inset-0 w-full h-full pointer-events-none" viewBox="0 0 800 300" preserveAspectRatio="xMidYMid slice" xmlns="http://www.w3.org/2000/svg">
            <defs>
                <linearGradient id="grid-grad" x1="0%" y1="0%" x2="100%" y2="0%">
                    <stop offset="0%" style="stop-color:white;stop-opacity:0.05" />
                    <stop offset="50%" style="stop-color:white;stop-opacity:0.2" />
                    <stop offset="100%" style="stop-color:white;stop-opacity:0.05" />
                </linearGradient>
            </defs>
            
            <!-- Abstract Time Flow (Curves) -->
            <path d="M0,150 C150,250 350,50 500,150 C650,250 800,100 800,150" fill="none" stroke="url(#grid-grad)" stroke-width="2" class="animate-pulse-slow" style="animation-duration: 8s;" />
            <path d="M0,160 C160,260 340,60 510,160 C660,260 810,110 810,160" fill="none" stroke="white" stroke-width="1" stroke-opacity="0.1" class="animate-pulse-slow" style="animation-delay: 1s; animation-duration: 10s;" />
            <path d="M-50,140 C140,240 360,40 490,140 C640,240 850,90 850,140" fill="none" stroke="white" stroke-width="1" stroke-opacity="0.1" class="animate-pulse-slow" style="animation-delay: 2s; animation-duration: 12s;" />

            <!-- Floating Geometric Elements (Time Blocks) -->
            <rect x="650" y="50" width="60" height="60" rx="10" fill="white" fill-opacity="0.1" class="animate-float" style="animation-delay: 0s;" />
            <rect x="100" y="200" width="40" height="40" rx="8" fill="white" fill-opacity="0.05" class="animate-float" style="animation-delay: 1.5s; animation-duration: 7s;" />
            <circle cx="400" cy="80" r="4" fill="white" fill-opacity="0.4" class="animate-ping-slow" />
            <circle cx="700" cy="220" r="3" fill="white" fill-opacity="0.3" class="animate-ping-slow" style="animation-delay: 2s;" />

            <!-- Clock/Gear Abstractions -->
            <circle cx="50" cy="50" r="100" stroke="white" stroke-opacity="0.05" stroke-width="20" stroke-dasharray="20 10" class="animate-spin-slow origin-[50px_50px]" />
            <circle cx="750" cy="250" r="80" stroke="white" stroke-opacity="0.05" stroke-width="15" stroke-dasharray="15 15" class="animate-spin-slow-reverse origin-[750px_250px]" />
        </svg>

        <!-- Content Overlay -->
        <div class="absolute inset-0 flex flex-col justify-center px-8 md:px-12 z-10">
            <h1 class="text-5xl md:text-6xl font-black text-white mb-2 tracking-tight drop-shadow-lg translate-y-[10px] opacity-0 animate-[fadeInUp_0.8s_ease-out_forwards]">
                Schedule
            </h1>
            <p class="text-blue-100 text-lg md:text-xl font-medium max-w-lg translate-y-[10px] opacity-0 animate-[fadeInUp_0.8s_0.2s_ease-out_forwards]">
                Master your time. Conquer your courses.
            </p>
        </div>
    </div>

    <!-- Controls Toolbar -->
    <div class="flex items-center justify-between bg-white dark:bg-slate-900 p-4 rounded-2xl shadow-sm border border-slate-100 dark:border-slate-800 mb-8">
        <div class="flex items-center gap-4">
            <button id="prevMonthBtn" class="p-2.5 hover:bg-slate-50 dark:hover:bg-slate-800 rounded-xl transition-colors text-slate-600 dark:text-slate-400 group">
                <i data-lucide="chevron-left" class="w-6 h-6 group-hover:-translate-x-1 transition-transform"></i>
            </button>
            <h2 id="currentMonthDisplay" class="text-2xl font-bold w-48 text-center text-slate-800 dark:text-white tabular-nums"></h2>
            <button id="nextMonthBtn" class="p-2.5 hover:bg-slate-50 dark:hover:bg-slate-800 rounded-xl transition-colors text-slate-600 dark:text-slate-400 group">
                <i data-lucide="chevron-right" class="w-6 h-6 group-hover:translate-x-1 transition-transform"></i>
            </button>
        </div>
        
        <button onclick="document.getElementById('addEventModal').showModal()" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-xl font-bold text-sm shadow-lg shadow-blue-500/20 transition-all hover:scale-105 active:scale-95 flex items-center gap-2">
            <i data-lucide="plus" class="w-5 h-5"></i>
            <span class="hidden sm:inline">Add Event</span>
        </button>
    </div>

    <style>
        @@keyframes float {
            0%, 100% { transform: translateY(0px) rotate(0deg); }
            50% { transform: translateY(-20px) rotate(5deg); }
        }
        @@keyframes spin-slow {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }
        @@keyframes spin-slow-reverse {
            from { transform: rotate(360deg); }
            to { transform: rotate(0deg); }
        }
        @@keyframes gradient-xy {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }
        @@keyframes fadeInUp {
            to { opacity: 1; transform: translateY(0); }
        }
        .animate-float { animation: float 6s ease-in-out infinite; }
        .animate-spin-slow { animation: spin-slow 20s linear infinite; }
        .animate-spin-slow-reverse { animation: spin-slow-reverse 25s linear infinite; }
        .animate-gradient-xy { animation: gradient-xy 15s ease infinite; }
        .animate-ping-slow { animation: ping 3s cubic-bezier(0, 0, 0.2, 1) infinite; }
    </style>

    <!-- Calendar Grid -->
    <div class="bg-white dark:bg-slate-900 rounded-3xl shadow-xl shadow-slate-200/50 dark:shadow-none border border-slate-100 dark:border-slate-800 overflow-hidden">
        <!-- Weekday Headers -->
        <div class="grid grid-cols-7 border-b border-slate-100 dark:border-slate-800 bg-slate-50/50 dark:bg-slate-900/50">
            @foreach(var day in new[]{"Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat"})
            {
                <div class="py-4 text-center text-xs font-bold text-slate-400 uppercase tracking-widest">@day</div>
            }
        </div>
        
        <!-- Days Grid -->
        <div id="calendarGrid" class="grid grid-cols-7 auto-rows-fr min-h-[600px] bg-slate-100 dark:bg-slate-800 gap-px border-b border-slate-100 dark:border-slate-800">
            <!-- JS will populate this -->
        </div>
    </div>
</div>

<!-- Add Event Modal -->
<dialog id="addEventModal" class="backdrop:backdrop-blur-sm backdrop:bg-slate-900/20 rounded-2xl shadow-2xl p-0 w-full max-w-md bg-transparent open:animate-in open:fade-in open:zoom-in-95 closed:animate-out closed:fade-out closed:zoom-out-95">
    <div class="bg-white dark:bg-slate-900 p-6 border border-slate-100 dark:border-slate-800">
        <div class="flex items-center justify-between mb-6">
            <h3 class="text-xl font-bold text-slate-800 dark:text-white">New Event</h3>
            <button onclick="document.getElementById('addEventModal').close()" class="p-2 hover:bg-slate-100 dark:hover:bg-slate-800 rounded-full text-slate-400 transition-colors">
                <i data-lucide="x" class="w-5 h-5"></i>
            </button>
        </div>
        
        <form asp-action="Create" method="post" class="space-y-4">
            <div>
                <label class="block text-xs font-bold text-slate-500 uppercase mb-1">Title</label>
                <input name="title" class="w-full bg-slate-50 dark:bg-slate-950 border border-slate-200 dark:border-slate-800 rounded-xl px-4 py-3 text-sm focus:ring-2 focus:ring-blue-500 outline-none dark:text-white transition-all" placeholder="e.g. Final Exam" required />
            </div>
            
            <div class="grid grid-cols-2 gap-4">
                <div>
                     <label class="block text-xs font-bold text-slate-500 uppercase mb-1">Start</label>
                     <input name="start" type="datetime-local" class="w-full bg-slate-50 dark:bg-slate-950 border border-slate-200 dark:border-slate-800 rounded-xl px-4 py-3 text-sm focus:ring-2 focus:ring-blue-500 outline-none dark:text-white [&::-webkit-calendar-picker-indicator]:dark:invert" required />
                </div>
                 <div>
                     <label class="block text-xs font-bold text-slate-500 uppercase mb-1">End (Optional)</label>
                     <input name="end" type="datetime-local" class="w-full bg-slate-50 dark:bg-slate-950 border border-slate-200 dark:border-slate-800 rounded-xl px-4 py-3 text-sm focus:ring-2 focus:ring-blue-500 outline-none dark:text-white [&::-webkit-calendar-picker-indicator]:dark:invert" />
                </div>
            </div>

            <div class="pt-4 flex justify-end gap-3">
                <button type="button" onclick="document.getElementById('addEventModal').close()" class="px-5 py-2.5 rounded-xl font-bold text-sm text-slate-500 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors">Cancel</button>
                <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2.5 rounded-xl font-bold text-sm shadow-lg shadow-blue-500/25 transition-all">Save Event</button>
            </div>
        </form>
    </div>
</dialog>

<!-- Delete Confirmation Modal -->
<dialog id="deleteModal" class="backdrop:backdrop-blur-sm backdrop:bg-slate-900/20 rounded-2xl shadow-2xl p-0 w-full max-w-sm bg-transparent open:animate-in open:fade-in open:zoom-in-95 closed:animate-out closed:fade-out closed:zoom-out-95">
    <div class="bg-white dark:bg-slate-900 p-6 border border-slate-100 dark:border-slate-800 text-center">
        <div class="w-12 h-12 rounded-full bg-red-100 dark:bg-red-900/30 text-red-600 dark:text-red-400 flex items-center justify-center mx-auto mb-4">
            <i data-lucide="trash-2" class="w-6 h-6"></i>
        </div>
        <h3 class="text-lg font-bold text-slate-800 dark:text-white mb-2">Delete Event?</h3>
        <p class="text-sm text-slate-500 dark:text-slate-400 mb-6">Are you sure you want to delete this event? This action cannot be undone.</p>
        
        <div class="grid grid-cols-2 gap-3">
            <button onclick="document.getElementById('deleteModal').close()" class="px-4 py-2 rounded-xl font-bold text-sm text-slate-500 hover:bg-slate-100 dark:hover:bg-slate-800 transition-colors">Cancel</button>
            <button onclick="confirmDelete()" class="bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-xl font-bold text-sm shadow-lg shadow-red-500/25 transition-all">Delete</button>
        </div>
    </div>
</dialog>

<!-- Delete Confirmation Form (Hidden, triggered by JS) -->
<form id="deleteForm" asp-action="Delete" method="post" class="hidden">
    <input type="hidden" id="deleteEventId" name="id" />
</form>

<script>
    const events = @Html.Raw(eventsJson);
    const calendarGrid = document.getElementById('calendarGrid');
    const currentMonthDisplay = document.getElementById('currentMonthDisplay');
    let currentDate = new Date();

    function renderCalendar() {
        calendarGrid.innerHTML = '';
        
        const year = currentDate.getFullYear();
        const month = currentDate.getMonth();
        
        const firstDay = new Date(year, month, 1);
        const lastDay = new Date(year, month + 1, 0);
        const daysInMonth = lastDay.getDate();
        const startDayOfWeek = firstDay.getDay(); // 0 = Sunday
        
        // Month Header
        const monthNames = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"];
        currentMonthDisplay.textContent = `${monthNames[month]} ${year}`;

        // Previous Month Padding
        const prevMonthLastDay = new Date(year, month, 0).getDate();
        for (let i = startDayOfWeek - 1; i >= 0; i--) {
            const dayNum = prevMonthLastDay - i;
            const dayEl = createDayElement(dayNum, true);
            calendarGrid.appendChild(dayEl);
        }

        // Current Month Days
        for (let day = 1; day <= daysInMonth; day++) {
             const dayEl = createDayElement(day, false);
             
             // Check for events
             const dateStr = `${year}-${String(month+1).padStart(2, '0')}-${String(day).padStart(2, '0')}`;
             const dayEvents = events.filter(e => {
                 const eDate = new Date(e.start);
                 return eDate.getFullYear() === year && eDate.getMonth() === month && eDate.getDate() === day;
             });

             if (dayEvents.length > 0) {
                 const eventsContainer = document.createElement('div');
                 eventsContainer.className = 'mt-1 space-y-1';
                 
                 dayEvents.forEach(evt => {
                     const evtEl = document.createElement('div');
                     evtEl.className = 'text-[10px] sm:text-xs p-1.5 rounded-lg bg-blue-100 dark:bg-blue-900/30 text-blue-700 dark:text-blue-300 font-medium truncate cursor-pointer hover:opacity-80 transition-opacity flex justify-between items-center group relative';
                     evtEl.innerHTML = `
                        <span class="truncate">${evt.title}</span>
                        <button onclick="deleteEvent(event, ${evt.id})" class="opacity-0 group-hover:opacity-100 text-blue-500 hover:text-red-500 transition-opacity ml-1 z-10 p-0.5" title="Delete">
                            <i data-lucide="trash-2" class="w-3 h-3"></i>
                        </button>
                     `;
                     // Simple tooltip or modal on click could be added here
                     eventsContainer.appendChild(evtEl);
                 });
                 
                 dayEl.appendChild(eventsContainer);
             }

             // Highlight Today
             const today = new Date();
             if (day === today.getDate() && month === today.getMonth() && year === today.getFullYear()) {
                 dayEl.classList.add('bg-blue-50/50', 'dark:bg-blue-900/10');
                 dayEl.querySelector('.day-number').classList.add('bg-blue-600', 'text-white', 'shadow-md', 'shadow-blue-500/30');
             }

             calendarGrid.appendChild(dayEl);
        }

        // Next Month Padding to fill 42 cells (6 rows) usually
        const totalCells = startDayOfWeek + daysInMonth;
        const remainingCells = 42 - totalCells; // Fixed 6 rows for consistency
        for (let i = 1; i <= remainingCells; i++) {
             const dayEl = createDayElement(i, true);
             calendarGrid.appendChild(dayEl);
        }
    }

    function createDayElement(dayNum, isPadding) {
        const el = document.createElement('div');
        el.className = `min-h-[100px] p-2 bg-white dark:bg-slate-900 border-r border-b border-slate-100 dark:border-slate-800 transition-colors ${isPadding ? 'bg-slate-50/50 dark:bg-slate-950/50 text-slate-300 dark:text-slate-700' : 'hover:bg-slate-50 dark:hover:bg-slate-800/50'}`;
        
        const numberEl = document.createElement('div');
        numberEl.className = `day-number w-7 h-7 flex items-center justify-center rounded-full text-sm font-bold ${isPadding ? '' : 'text-slate-700 dark:text-slate-300'}`;
        numberEl.textContent = dayNum;
        
        el.appendChild(numberEl);
        return el;
    }

    function deleteEvent(e, id) {
        e.stopPropagation(); // Prevent bubbling if we had a click listener on the event card
        document.getElementById('deleteEventId').value = id;
        document.getElementById('deleteModal').showModal();
    }
    
    function confirmDelete() {
        document.getElementById('deleteForm').submit();
    }

    document.getElementById('prevMonthBtn').addEventListener('click', () => {
        currentDate.setMonth(currentDate.getMonth() - 1);
        renderCalendar();
    });

    document.getElementById('nextMonthBtn').addEventListener('click', () => {
        currentDate.setMonth(currentDate.getMonth() + 1);
        renderCalendar();
    });

    // Initial Render
    renderCalendar();
</script>
