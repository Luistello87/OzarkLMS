@model IEnumerable<OzarkLMS.Models.CalendarEvent>

<div class="p-8 max-w-[1200px] mx-auto">
    <div class="flex items-center justify-between mb-8">
        <h1 class="text-3xl font-bold text-[#004B87]">Academic Calendar</h1>
        
        <form asp-action="Create" method="post" class="flex space-x-2 bg-white p-2 rounded-xl shadow-sm border border-gray-200">
            <input name="title" class="bg-gray-50 border-0 rounded-lg px-3 py-2 text-sm focus:ring-2 focus:ring-[#004B87]" placeholder="Event Title" required />
            <input name="start" type="datetime-local" class="bg-gray-50 border-0 rounded-lg px-3 py-2 text-sm" required />
            <button type="submit" class="bg-[#004B87] text-white px-4 py-2 rounded-lg font-bold text-sm hover:bg-[#003d6e]">
                Add Event
            </button>
        </form>
    </div>

    <div class="bg-white rounded-xl shadow-sm border border-gray-200 overflow-hidden">
        <div class="grid grid-cols-7 gap-px bg-gray-200 border-b border-gray-200">
            @foreach(var day in new[]{"Sun", "Mon", "Tue", "Wed", "Thu", "Fri", "Sat"})
            {
                <div class="bg-gray-50 p-2 text-center text-xs font-bold text-slate-500 uppercase">@day</div>
            }
        </div>
        
        <!-- Simplified Calendar View (List of upcoming for MVP robustness) -->
        <div class="p-6">
            <h2 class="font-bold text-lg mb-4 text-slate-700">Upcoming Events</h2>
            @if(!Model.Any())
            {
                <div class="text-center py-10 text-slate-400">
                    <i data-lucide="calendar-x" class="w-10 h-10 mx-auto mb-2 opacity-50"></i>
                    No events scheduled.
                </div>
            }
            else
            {
                <div class="space-y-4">
                    @foreach(var evt in Model)
                    {
                        <div class="flex items-center p-4 bg-gray-50 rounded-xl border border-gray-100 hover:border-blue-200 transition-colors group">
                            <div class="flex-shrink-0 w-16 text-center border-r border-gray-200 pr-4 mr-4">
                                <div class="text-xs font-bold text-slate-500 uppercase">@evt.Start.ToString("MMM")</div>
                                <div class="text-2xl font-bold text-[#004B87]">@evt.Start.Day</div>
                            </div>
                            <div class="flex-1">
                                <h3 class="font-bold text-slate-800">@evt.Title</h3>
                                <p class="text-xs text-slate-500">@evt.Start.ToShortTimeString()</p>
                            </div>
                            <form asp-action="Delete" method="post">
                                <input type="hidden" name="id" value="@evt.Id" />
                                <button type="submit" class="text-slate-400 hover:text-red-500 p-2 opacity-0 group-hover:opacity-100 transition-opacity">
                                    <i data-lucide="trash-2" class="w-4 h-4"></i>
                                </button>
                            </form>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>
